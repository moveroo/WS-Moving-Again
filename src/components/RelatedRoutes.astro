---
import type { CollectionEntry } from 'astro:content';

interface Props {
  title: string;
  routes: CollectionEntry<'routes'>[];
}

const { title, routes } = Astro.props;
---

{
  routes.length > 0 && (
    <section class="py-12 bg-[#800005]">
      <div class="container mx-auto px-4">
        <h3 class="text-xl font-bold text-white mb-6">{title}</h3>

        <div class="grid md:grid-cols-3 gap-4">
          {routes.map((route) => (
            <a
              href={`/${route.data.slugFs}/`}
              class="block bg-white/10 backdrop-blur p-4 rounded-xl hover:bg-white/20 transition-all group border border-white/10"
            >
              <div class="flex items-center gap-2">
                <span class="text-xl">ðŸš›</span>
                <div>
                  <p class="font-semibold text-white group-hover:text-brand-yellow transition-colors">
                    {route.data.origin} â†’ {route.data.destination}
                  </p>
                  <p class="text-sm text-white/70">
                    {route.data.originState} to {route.data.destinationState}
                  </p>
                </div>
              </div>
            </a>
          ))}
        </div>
      </div>
    </section>
  )
}
