---
import Layout from '../layouts/Layout.astro';
import FactBox from '../components/FactBox.astro';
import { getCollection } from 'astro:content';
import { BRAND } from '../utils/brand';
import { formatMigration, MIGRATION_DATA_PERIOD } from '../utils/migration-stats';
import { getPopularRoutesForCity } from '../utils/routeDiscovery';

const allRoutes = await getCollection('routes');
const cityName = 'Darwin';
const popularRoutes = getPopularRoutesForCity(allRoutes, cityName, 25);

const pageFacts = {
  service: 'Interstate backloading',
  location: 'Darwin, Northern Territory',
  coverage: ['Darwin CBD', 'Palmerston', 'Casuarina', 'Alice Springs', 'Katherine'],
  population: '150,000',
  typical_transit_to_adelaide: '3-4 business days',
  typical_transit_to_brisbane: '5-7 business days',
  typical_transit_to_perth: '4-6 business days',
  typical_savings: '40-60%',
  transit_insurance_included: true,
  wet_season_considerations: true,
};
---

<Layout
  title="Backloading Darwin | Interstate Removals NT | Moving Again"
  description="Darwin backloading and interstate removals. Save up to 60% on moves to/from Northern Territory. Services to Adelaide, Brisbane & Perth. Transit insurance included."
  schemaType="LocalBusiness"
  schemaData={{
    name: 'Moving Again - Darwin',
    address: {
      '@type': 'PostalAddress',
      addressLocality: 'Darwin',
      addressRegion: 'NT',
      addressCountry: 'AU',
    },
    areaServed: 'Northern Territory',
    priceRange: '$$',
  }}
>
  <section class="bg-gradient-to-br from-brand-dark to-gray-900 text-white py-20">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <span
          class="inline-block px-4 py-1 mb-6 rounded-full bg-brand-yellow/20 text-brand-yellow font-bold uppercase tracking-wider text-sm"
        >
          Northern Territory Hub
        </span>
        <h1 class="text-4xl md:text-6xl font-black mb-6">Backloading Darwin</h1>
        <p class="text-xl text-gray-300 mb-8 max-w-2xl mx-auto">
          Australia's Top End capital. Remote area expertise with services to Adelaide, Brisbane,
          and Perth.
        </p>
        <a
          data-brain-track="quote"
          href="https://removalistquotes.movingagain.com.au/quote/household"
          class="inline-flex items-center justify-center gap-2 py-4 px-8 bg-brand-red text-white font-bold rounded-brand text-lg hover:bg-brand-accent transition-colors shadow-lg"
        >
          Get a Darwin Quote ‚Üí
        </a>
        <div class="flex flex-wrap justify-center gap-6 mt-10 text-sm text-gray-400">
          <div class="flex items-center gap-2">
            <span class="text-green-400">‚úì</span><span
              >{BRAND.yearsInBusiness} Years Experience</span
            >
          </div>
          <div class="flex items-center gap-2">
            <span class="text-green-400">‚úì</span><span>Transit Insurance Included</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="py-12 bg-white border-b">
    <div class="container mx-auto px-4">
      <div class="grid md:grid-cols-4 gap-8 max-w-5xl mx-auto text-center">
        <div>
          <div class="text-4xl font-black text-brand-red mb-2">üåè</div>
          <p class="text-sm text-gray-600">Top End Specialists</p>
        </div>
        <div>
          <div class="text-4xl font-black text-orange-500 mb-2">{formatMigration('NT')}</div>
          <p class="text-sm text-gray-600">Net Migration ({MIGRATION_DATA_PERIOD})</p>
        </div>
        <div>
          <div class="text-4xl font-black text-brand-red mb-2">Fortnightly</div>
          <p class="text-sm text-gray-600">Services All Routes</p>
        </div>
        <div>
          <div class="text-4xl font-black text-brand-red mb-2">60%</div>
          <p class="text-sm text-gray-600">Typical Savings</p>
        </div>
      </div>
    </div>
  </section>

  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center text-brand-dark mb-4">Routes from Darwin</h2>
      <p class="text-center text-gray-600 mb-12 max-w-2xl mx-auto">
        Regular backloading services from Darwin to all major Australian cities
      </p>
      <div class="grid md:grid-cols-3 gap-6 max-w-5xl mx-auto">
        {
          popularRoutes.fromCity.map((route) => (
            <a
              href={`/${route.data.slugFs}/`}
              class="block bg-white p-6 rounded-xl hover:shadow-lg transition-shadow border border-gray-100 group"
            >
              <div class="text-2xl mb-3">üöõ</div>
              <h3 class="font-bold text-brand-dark group-hover:text-brand-red transition-colors text-lg">
                Darwin ‚Üí {route.data.destination}
              </h3>
              <div class="mt-3 flex gap-4 text-sm text-gray-500">
                <span>{route.data.transitDays || '3-7 days'}</span>
              </div>
            </a>
          ))
        }
      </div>
    </div>
  </section>

  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center text-brand-dark mb-4">Routes to Darwin</h2>
      <p class="text-center text-gray-600 mb-12 max-w-2xl mx-auto">
        Moving to Darwin? Regular services from all major cities
      </p>
      <div class="grid md:grid-cols-3 gap-6 max-w-5xl mx-auto">
        {
          popularRoutes.toCity.map((route) => (
            <a
              href={`/${route.data.slugFs}/`}
              class="block bg-white p-6 rounded-xl hover:shadow-lg transition-shadow border border-gray-100 group"
            >
              <div class="text-2xl mb-3">üöõ</div>
              <h3 class="font-bold text-brand-dark group-hover:text-brand-red transition-colors text-lg">
                {route.data.origin} ‚Üí Darwin
              </h3>
              <div class="mt-3 flex gap-4 text-sm text-gray-500">
                <span>{route.data.transitDays || '3-7 days'}</span>
              </div>
            </a>
          ))
        }
      </div>
    </div>
  </section>

  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto">
        <h2 class="text-3xl font-bold text-brand-dark mb-6">Darwin: Top End Hub</h2>
        <div class="prose prose-lg">
          <p>
            Darwin is one of Australia's most remote capitals, but our
            <a href="/backloading/" class="text-brand-red hover:underline">backloading</a> service makes
            moves affordable. We run the Stuart Highway regularly, connecting Darwin to
            <a href="/adelaide/" class="text-brand-red hover:underline">Adelaide</a> and the national
            network.
          </p>
          <p>
            <strong>Wet season note:</strong> During the wet season (November to April), some regional
            NT areas may experience access delays due to flooding. We'll keep you informed of any timing
            impacts and work around weather conditions.
          </p>
          <p>
            We quote by <strong>cubic meter</strong> rather than truckload, so you pay fairly for the
            space you use. With {BRAND.yearsInBusiness} years of experience, we understand NT logistics.
            Transit insurance is included on all moves.
          </p>
        </div>
      </div>
    </div>
  </section>

  <FactBox facts={pageFacts} />

  <section class="py-20 bg-gradient-to-r from-brand-red to-brand-accent">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl font-bold text-white mb-6">Ready to Move from Darwin?</h2>
      <p class="text-white/80 mb-8 max-w-xl mx-auto">
        Get an instant quote for your Darwin interstate move.
      </p>
      <a
        data-brain-track="quote"
        href="https://removalistquotes.movingagain.com.au/quote/household"
        class="inline-block py-4 px-10 bg-white text-brand-red font-bold rounded-brand text-lg hover:bg-gray-100 transition-colors shadow-lg"
        >Get Your Free Quote</a
      >
    </div>
  </section>
</Layout>
