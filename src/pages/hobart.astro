---
import Layout from '../layouts/Layout.astro';
import FactBox from '../components/FactBox.astro';
import TrustSignals from '../components/TrustSignals.astro';
import { getCollection } from 'astro:content';
import { BRAND } from '../utils/brand';
import { formatMigration, MIGRATION_DATA_PERIOD } from '../utils/migration-stats';
import { getPopularRoutesForCity } from '../utils/routeDiscovery';

import { getContentDate } from '../utils/fileDates';
import { fileURLToPath } from 'url';

// Get content modification date
const currentFile = fileURLToPath(import.meta.url);
const pageDate = getContentDate(currentFile);

const allRoutes = await getCollection('routes');
const cityName = 'Hobart';
const popularRoutes = getPopularRoutesForCity(allRoutes, cityName, 25);

const pageFacts = {
  service: 'Interstate backloading',
  location: 'Hobart, Tasmania',
  coverage: ['Hobart CBD', 'Glenorchy', 'Kingston', 'Huonville', 'New Norfolk', 'Bridgewater'],
  population: '240,000',
  typical_transit_to_melbourne: '3-5 business days',
  typical_transit_to_sydney: '4-6 business days',
  typical_savings: '40-60%',
  transit_insurance_included: true,
  ferry_crossing_included: true,
};

// Breadcrumb navigation
const breadcrumbItems = [
  { name: 'Home', url: 'https://movingagain.com.au/' },
  { name: 'Service Areas', url: 'https://movingagain.com.au/service-areas/' },
  { name: 'Hobart', url: 'https://movingagain.com.au/hobart/' },
];
---

<Layout
  title="Backloading Hobart | Interstate Removals TAS | Moving Again"
  description="Hobart backloading and interstate removals including Bass Strait ferry crossing. Save up to 60% on moves to/from Tasmania. Transit insurance included."
  schemaType="Organization"
  schemaData={{
    name: 'Moving Again - Hobart',
    areaServed: 'Tasmania',
  }}
  modifiedDate={pageDate}
>
  <!-- BreadcrumbList Schema -->
  <script
    type="application/ld+json"
    set:html={JSON.stringify({
      '@context': 'https://schema.org',
      '@type': 'BreadcrumbList',
      itemListElement: breadcrumbItems.map((item, index) => ({
        '@type': 'ListItem',
        position: index + 1,
        name: item.name,
        item: item.url,
      })),
    })}
  />
  <section class="bg-gradient-to-br from-brand-dark to-gray-900 text-white py-20">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <span
          class="inline-block px-4 py-1 mb-6 rounded-full bg-brand-yellow/20 text-brand-yellow font-bold uppercase tracking-wider text-sm"
        >
          Tasmania Hub
        </span>
        <h1 class="text-4xl md:text-6xl font-black mb-6">Backloading Hobart</h1>
        <p class="text-xl text-gray-300 mb-8 max-w-2xl mx-auto">
          Tasmania's capital with Bass Strait ferry crossing included. Save up to 60% with
          backloading.
        </p>
        <a
          data-brain-track="quote"
          href="https://removalistquotes.movingagain.com.au/quote/household"
          class="inline-flex items-center justify-center gap-2 py-4 px-8 bg-brand-red text-white font-bold rounded-brand text-lg hover:bg-brand-accent transition-colors shadow-lg"
        >
          Get a Hobart Quote ‚Üí
        </a>
        <div class="flex flex-wrap justify-center gap-6 mt-10 text-sm text-gray-200">
          <div class="flex items-center gap-2">
            <span class="text-green-300">‚úì</span><span>Ferry Crossing Included</span>
          </div>
          <div class="flex items-center gap-2">
            <span class="text-green-300">‚úì</span><span>Transit Insurance Included</span>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- Breadcrumb -->
  <nav class="py-4 bg-[#800005]" role="navigation">
    <div class="container mx-auto px-4">
      <div class="flex items-center gap-2 text-sm text-white flex-wrap">
        <a href="/" class="hover:text-gray-200">Home</a>
        <span>‚Ä∫</span>
        <a href="/service-areas/" class="hover:text-gray-200">Service Areas</a>
        <span>‚Ä∫</span>
        <span class="text-white">Hobart</span>
      </div>
    </div>
  </nav>

  <section class="py-12 bg-white border-b">
    <div class="container mx-auto px-4">
      <div class="grid md:grid-cols-4 gap-8 max-w-5xl mx-auto text-center">
        <div>
          <div class="text-4xl font-black text-brand-red mb-2">‚õ¥Ô∏è</div>
          <p class="text-sm text-gray-600">Ferry Crossing Included</p>
        </div>
        <div>
          <div class="text-4xl font-black text-orange-500 mb-2">{formatMigration('TAS')}</div>
          <p class="text-sm text-gray-600">Net Migration ({MIGRATION_DATA_PERIOD})</p>
        </div>
        <div>
          <div class="text-4xl font-black text-brand-red mb-2">Weekly</div>
          <p class="text-sm text-gray-600">Melbourne Services</p>
        </div>
        <div>
          <div class="text-4xl font-black text-brand-red mb-2">60%</div>
          <p class="text-sm text-gray-600">Typical Savings</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Quarantine Notice -->
  <section class="py-8 bg-yellow-50 border-y border-yellow-200">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto flex items-start gap-4">
        <span class="text-2xl">‚ö†Ô∏è</span>
        <div>
          <h2 class="font-bold text-yellow-900 text-lg mb-2">Tasmania Quarantine Restrictions</h2>
          <p class="text-yellow-900 text-sm">
            Some items cannot enter Tasmania including live plants, soil, and certain produce. We'll
            advise you on what can and cannot be transported during your quote.
          </p>
        </div>
      </div>
    </div>
  </section>

  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center text-brand-dark mb-4">
        What Routes Are Available from Hobart?
      </h2>
      <p class="text-center text-gray-600 mb-12 max-w-2xl mx-auto">
        Regular backloading services from Hobart to all major Australian cities
      </p>
      <div class="grid md:grid-cols-3 gap-6 max-w-5xl mx-auto">
        {
          popularRoutes.fromCity.map((route) => (
            <a
              href={`/${route.data.slugFs}/`}
              class="block bg-white p-6 rounded-xl hover:shadow-lg transition-shadow border border-gray-100 group"
            >
              <div class="text-2xl mb-3">üöõ</div>
              <h3 class="font-bold text-brand-dark group-hover:text-brand-red transition-colors text-lg">
                Hobart ‚Üí {route.data.destination}
              </h3>
              <div class="mt-3 flex gap-4 text-sm text-gray-600">
                <span>{route.data.transitDays || '3-7 days'}</span>
              </div>
            </a>
          ))
        }
      </div>
    </div>
  </section>

  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center text-brand-dark mb-4">
        What Routes Are Available to Hobart?
      </h2>
      <p class="text-center text-gray-600 mb-12 max-w-2xl mx-auto">
        Moving to Hobart? Regular services from all major cities
      </p>
      <div class="grid md:grid-cols-3 gap-6 max-w-5xl mx-auto">
        {
          popularRoutes.toCity.map((route) => (
            <a
              href={`/${route.data.slugFs}/`}
              class="block bg-white p-6 rounded-xl hover:shadow-lg transition-shadow border border-gray-100 group"
            >
              <div class="text-2xl mb-3">üöõ</div>
              <h3 class="font-bold text-brand-dark group-hover:text-brand-red transition-colors text-lg">
                {route.data.origin} ‚Üí Hobart
              </h3>
              <div class="mt-3 flex gap-4 text-sm text-gray-600">
                <span>{route.data.transitDays || '3-7 days'}</span>
              </div>
            </a>
          ))
        }
      </div>
    </div>
  </section>

  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto">
        <h2 class="text-3xl font-bold text-brand-dark mb-6">
          What Routes Are Available from Hobart?
        </h2>
        <div class="prose prose-lg">
          <p>
            Moving to Tasmania involves crossing Bass Strait by ferry. Our
            <a href="/backloading/" class="text-brand-red hover:underline">backloading</a> service includes
            the Spirit of Tasmania ferry crossing in our quote ‚Äî no hidden fees. We coordinate the entire
            process from pickup to delivery.
          </p>
          <p>
            With {BRAND.yearsInBusiness} years of experience, we've helped thousands of families relocate
            to and from Tasmania. We service all of Southern Tasmania from Hobart to the Huon Valley,
            plus work closely with our
            <a href="/launceston/" class="text-brand-red hover:underline">Launceston</a> team for statewide
            coverage.
          </p>
          <p>
            We quote by <strong>cubic meter</strong> rather than truckload, so you pay fairly for the
            space you use. Transit insurance is included on all moves.
          </p>
        </div>
      </div>
    </div>
  </section>

  <FactBox facts={pageFacts} />

  <!-- Security Trust Signals -->
  <TrustSignals />

  <section class="py-20 bg-gradient-to-r from-brand-red to-brand-accent">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl font-bold text-white mb-6">Ready to Move from Hobart?</h2>
      <p class="text-white/90 mb-8 max-w-xl mx-auto">
        Get a quote including Bass Strait ferry crossing.
      </p>
      <a
        data-brain-track="quote"
        href="https://removalistquotes.movingagain.com.au/quote/household"
        class="inline-block py-4 px-10 bg-white text-brand-red font-bold rounded-brand text-lg hover:bg-gray-100 transition-colors shadow-lg"
        >Get Your Free Quote</a
      >
    </div>
  </section>
</Layout>
