---
import SEO from '../components/SEO.astro';
---

<SEO 
  title="Moving Again Astro"
  description="A new project scaffolded with Webforge."
>
  <!-- Load Google Font -->
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700;900&display=swap" rel="stylesheet" slot="head" />

  <main class="min-h-screen bg-brand-light font-sans text-brand-dark flex items-center justify-center p-4">
    <div class="max-w-xl w-full bg-white rounded-2xl p-8 border border-gray-200 shadow-xl">
      <div class="mb-6">
        <span class="inline-block px-3 py-1 rounded-full bg-brand-red/10 text-brand-red text-sm font-bold border border-brand-red/20">
          Moving Again Brand
        </span>
      </div>
      
      <h1 class="text-4xl font-black text-brand-dark mb-4 tracking-tight">
        Ready to Move?
      </h1>
      
      <p class="text-gray-600 text-lg mb-8 leading-relaxed">
        Your new Astro project is branded with the Moving Again identity.
      </p>

      <div class="grid gap-4">
        <button class="w-full py-4 px-6 bg-brand-red text-white font-bold rounded-brand hover:bg-red-900 transition-colors shadow-lg shadow-brand-red/30">
          Get a Moving Quote
        </button>
        <button class="w-full py-4 px-6 bg-brand-yellow text-brand-dark font-bold rounded-brand hover:bg-yellow-400 transition-colors">
          Get a Car Transport Quote
        </button>
      </div>
    </div>
  </main>
</SEO>
