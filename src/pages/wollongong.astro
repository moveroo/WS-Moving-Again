---
import Layout from '../layouts/Layout.astro';
import FactBox from '../components/FactBox.astro';
import TrustSignals from '../components/TrustSignals.astro';
import { getCollection } from 'astro:content';
import { BRAND } from '../utils/brand';
import { formatMigration, MIGRATION_DATA_PERIOD } from '../utils/migration-stats';
import { getPopularRoutesForCity } from '../utils/routeDiscovery';

import { getContentDate } from '../utils/fileDates';
import { fileURLToPath } from 'url';

// Get content modification date
const currentFile = fileURLToPath(import.meta.url);
const pageDate = getContentDate(currentFile);

const allRoutes = await getCollection('routes');
const cityName = 'Wollongong';
const popularRoutes = getPopularRoutesForCity(allRoutes, cityName, 25);

const pageFacts = {
  service: 'Interstate backloading',
  location: 'Wollongong, New South Wales',
  coverage: ['Wollongong CBD', 'Fairy Meadow', 'Corrimal', 'Dapto', 'Shellharbour', 'Kiama'],
  population: '310,000',
  typical_transit_to_sydney: 'Same day',
  typical_transit_to_melbourne: '2-3 business days',
  typical_savings: '40-60%',
  transit_insurance_included: true,
};

// Breadcrumb navigation
const breadcrumbItems = [
  { name: 'Home', url: 'https://movingagain.com.au/' },
  { name: 'Service Areas', url: 'https://movingagain.com.au/service-areas/' },
  { name: 'Wollongong', url: 'https://movingagain.com.au/wollongong/' },
];
---

<Layout
  title="Backloading Wollongong | Interstate Removals NSW | Moving Again"
  description="Wollongong backloading and interstate removals. Save up to 60% on moves to/from the Illawarra. Regular services to Melbourne, Brisbane & all capitals...."
  schemaType="LocalBusiness"
  schemaData={{
    name: 'Moving Again - Wollongong',
    address: {
      '@type': 'PostalAddress',
      addressLocality: 'Wollongong',
      addressRegion: 'NSW',
      addressCountry: 'AU',
    },
    areaServed: 'Illawarra Region',
    priceRange: '$',
  }}
  modifiedDate={pageDate}
>
  <!-- BreadcrumbList Schema -->
  <script
    type="application/ld+json"
    set:html={JSON.stringify({
      '@context': 'https://schema.org',
      '@type': 'BreadcrumbList',
      itemListElement: breadcrumbItems.map((item, index) => ({
        '@type': 'ListItem',
        position: index + 1,
        name: item.name,
        item: item.url,
      })),
    })}
  />
  <section class="bg-gradient-to-br from-brand-dark to-gray-900 text-white py-20">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <span
          class="inline-block px-4 py-1 mb-6 rounded-full bg-brand-yellow/20 text-brand-yellow font-bold uppercase tracking-wider text-sm"
        >
          Illawarra Hub
        </span>
        <h1 class="text-4xl md:text-6xl font-black mb-6">Backloading Wollongong</h1>
        <p class="text-xl text-gray-300 mb-8 max-w-2xl mx-auto">
          NSW's third largest city. Regular backloading services to Melbourne, Brisbane, and all
          Australian capitals.
        </p>
        <a
          data-brain-track="quote"
          href="https://removalistquotes.movingagain.com.au/quote/household"
          class="inline-flex items-center justify-center gap-2 py-4 px-8 bg-brand-red text-white font-bold rounded-brand text-lg hover:bg-brand-accent transition-colors shadow-lg"
        >
          Get a Wollongong Quote â†’
        </a>
        <div class="flex flex-wrap justify-center gap-6 mt-10 text-sm text-gray-400">
          <div class="flex items-center gap-2">
            <span class="text-green-400">âœ“</span><span
              >{BRAND.yearsInBusiness} Years Experience</span
            >
          </div>
          <div class="flex items-center gap-2">
            <span class="text-green-400">âœ“</span><span>Transit Insurance Included</span>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- Breadcrumb -->
  <nav class="py-4 bg-[#800005]" role="navigation">
    <div class="container mx-auto px-4">
      <div class="flex items-center gap-2 text-sm text-white/80 flex-wrap">
        <a href="/" class="hover:text-white">Home</a>
        <span>â€º</span>
        <a href="/service-areas/" class="hover:text-white">Service Areas</a>
        <span>â€º</span>
        <span class="text-white">Wollongong</span>
      </div>
    </div>
  </nav>

  <section class="py-12 bg-white border-b">
    <div class="container mx-auto px-4">
      <div class="grid md:grid-cols-3 gap-8 max-w-5xl mx-auto text-center">
        <div>
          <div class="text-4xl font-black text-brand-red mb-2">310K</div>
          <p class="text-sm text-gray-600">Wollongong Population</p>
        </div>
        <div>
          <div class="text-4xl font-black text-orange-500 mb-2">{formatMigration('NSW')}</div>
          <p class="text-sm text-gray-600">NSW Net Migration ({MIGRATION_DATA_PERIOD})</p>
        </div>
        <div>
          <div class="text-4xl font-black text-brand-red mb-2">60%</div>
          <p class="text-sm text-gray-600">Typical Savings</p>
        </div>
      </div>
    </div>
  </section>

  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center text-brand-dark mb-4">
        What Routes Are Available from Wollongong?
      </h2>
      <p class="text-center text-gray-600 mb-12 max-w-2xl mx-auto">
        Regular backloading services from Wollongong to all major Australian cities
      </p>
      <div class="grid md:grid-cols-3 gap-6 max-w-5xl mx-auto">
        {
          popularRoutes.fromCity.map((route) => (
            <a
              href={`/${route.data.slugFs}/`}
              class="block bg-white p-6 rounded-xl hover:shadow-lg transition-shadow border border-gray-100 group"
            >
              <div class="text-2xl mb-3">ðŸš›</div>
              <h3 class="font-bold text-brand-dark group-hover:text-brand-red transition-colors text-lg">
                Wollongong â†’ {route.data.destination}
              </h3>
              <div class="mt-3 flex gap-4 text-sm text-gray-500">
                <span>{route.data.transitDays || '3-7 days'}</span>
              </div>
            </a>
          ))
        }
      </div>
    </div>
  </section>

  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center text-brand-dark mb-4">
        What Routes Are Available to Wollongong?
      </h2>
      <p class="text-center text-gray-600 mb-12 max-w-2xl mx-auto">
        Moving to Wollongong? Regular services from all major cities
      </p>
      <div class="grid md:grid-cols-3 gap-6 max-w-5xl mx-auto">
        {
          popularRoutes.toCity.map((route) => (
            <a
              href={`/${route.data.slugFs}/`}
              class="block bg-white p-6 rounded-xl hover:shadow-lg transition-shadow border border-gray-100 group"
            >
              <div class="text-2xl mb-3">ðŸš›</div>
              <h3 class="font-bold text-brand-dark group-hover:text-brand-red transition-colors text-lg">
                {route.data.origin} â†’ Wollongong
              </h3>
              <div class="mt-3 flex gap-4 text-sm text-gray-500">
                <span>{route.data.transitDays || '3-7 days'}</span>
              </div>
            </a>
          ))
        }
      </div>
    </div>
  </section>

  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto">
        <h2 class="text-3xl font-bold text-brand-dark mb-6">
          What Routes Are Available from Wollongong?
        </h2>
        <div class="prose prose-lg">
          <p>
            Wollongong is just 80km south of Sydney, nestled between the Illawarra escarpment and
            the Pacific Ocean. Our
            <a href="/backloading/" class="text-brand-red hover:underline">backloading</a> service connects
            Wollongong to our
            <a href="/sydney/" class="text-brand-red hover:underline">Sydney</a> hub with same-day service.
          </p>
          <p>
            Whether you're relocating from
            <a href="/melbourne/" class="text-brand-red hover:underline">Melbourne</a>,
            <a href="/brisbane/" class="text-brand-red hover:underline">Brisbane</a>, or
            <a href="/perth/" class="text-brand-red hover:underline">Perth</a>, we deliver directly
            to the Illawarra region.
          </p>
          <p>
            We quote by <strong>cubic meter</strong> rather than truckload, so you pay fairly for the
            space you use. Transit insurance is included on all moves.
          </p>
        </div>
      </div>
    </div>
  </section>

  <FactBox facts={pageFacts} />

  <!-- Security Trust Signals -->
  <TrustSignals />

  <section class="py-20 bg-gradient-to-r from-brand-red to-brand-accent">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl font-bold text-white mb-6">Ready to Move from Wollongong?</h2>
      <p class="text-white/80 mb-8 max-w-xl mx-auto">
        Get an instant quote for your Wollongong interstate move.
      </p>
      <a
        data-brain-track="quote"
        href="https://removalistquotes.movingagain.com.au/quote/household"
        class="inline-block py-4 px-10 bg-white text-brand-red font-bold rounded-brand text-lg hover:bg-gray-100 transition-colors shadow-lg"
        >Get Your Free Quote</a
      >
    </div>
  </section>
</Layout>
