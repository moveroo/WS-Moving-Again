---
import Layout from '../layouts/Layout.astro';
import FactBox from '../components/FactBox.astro';
import { getCollection } from 'astro:content';
import { BRAND } from '../utils/brand';
import { formatMigration, MIGRATION_DATA_PERIOD } from '../utils/migration-stats';
import { getPopularRoutesForCity } from '../utils/routeDiscovery';

const allRoutes = await getCollection('routes');
const cityName = 'Toowoomba';
const popularRoutes = getPopularRoutesForCity(allRoutes, cityName, 15);

const pageFacts = {
  service: 'Interstate backloading',
  location: 'Toowoomba, Queensland',
  coverage: [
    'Toowoomba CBD',
    'Darling Heights',
    'Rangeville',
    'East Toowoomba',
    'Withcott',
    'Highfields',
  ],
  population: '170,000',
  typical_transit_to_brisbane: '1-2 business days',
  typical_transit_to_sydney: '2-4 business days',
  typical_savings: '40-60%',
  transit_insurance_included: true,
};
---

<Layout
  title="Backloading Toowoomba | Interstate Removals QLD | Moving Again"
  description="Toowoomba backloading and interstate removals. Save up to 60% on moves to/from the Darling Downs. Regular services to Brisbane, Sydney & all capitals. Transit insurance included."
  schemaType="LocalBusiness"
  schemaData={{
    name: 'Moving Again - Toowoomba',
    address: {
      '@type': 'PostalAddress',
      addressLocality: 'Toowoomba',
      addressRegion: 'QLD',
      addressCountry: 'AU',
    },
    areaServed: 'Darling Downs',
    priceRange: '$$',
  }}
>
  <section class="bg-gradient-to-br from-brand-dark to-gray-900 text-white py-20">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <span
          class="inline-block px-4 py-1 mb-6 rounded-full bg-brand-yellow/20 text-brand-yellow font-bold uppercase tracking-wider text-sm"
        >
          Darling Downs Hub
        </span>
        <h1 class="text-4xl md:text-6xl font-black mb-6">Backloading Toowoomba</h1>
        <p class="text-xl text-gray-300 mb-8 max-w-2xl mx-auto">
          Queensland's largest inland city. Regular backloading services to Brisbane, Sydney, and
          all Australian capitals.
        </p>
        <a
          href="https://removalistquotes.movingagain.com.au/quote/household"
          class="inline-flex items-center justify-center gap-2 py-4 px-8 bg-brand-red text-white font-bold rounded-brand text-lg hover:bg-brand-accent transition-colors shadow-lg"
        >
          Get a Toowoomba Quote â†’
        </a>
        <div class="flex flex-wrap justify-center gap-6 mt-10 text-sm text-gray-400">
          <div class="flex items-center gap-2">
            <span class="text-green-400">âœ“</span><span
              >{BRAND.yearsInBusiness} Years Experience</span
            >
          </div>
          <div class="flex items-center gap-2">
            <span class="text-green-400">âœ“</span><span>Transit Insurance Included</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="py-12 bg-white border-b">
    <div class="container mx-auto px-4">
      <div class="grid md:grid-cols-3 gap-8 max-w-5xl mx-auto text-center">
        <div>
          <div class="text-4xl font-black text-brand-red mb-2">170K</div>
          <p class="text-sm text-gray-600">Toowoomba Population</p>
        </div>
        <div>
          <div class="text-4xl font-black text-orange-500 mb-2">{formatMigration('QLD')}</div>
          <p class="text-sm text-gray-600">QLD Net Migration ({MIGRATION_DATA_PERIOD})</p>
        </div>
        <div>
          <div class="text-4xl font-black text-brand-red mb-2">60%</div>
          <p class="text-sm text-gray-600">Typical Savings</p>
        </div>
      </div>
    </div>
  </section>

  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center text-brand-dark mb-4">Routes from Toowoomba</h2>
      <p class="text-center text-gray-600 mb-12 max-w-2xl mx-auto">
        Regular backloading services from Toowoomba to all major Australian cities
      </p>
      <div class="grid md:grid-cols-3 gap-6 max-w-5xl mx-auto">
        {
          popularRoutes.fromCity.map((route) => (
            <a
              href={`/${route.data.slugFs}/`}
              class="block bg-white p-6 rounded-xl hover:shadow-lg transition-shadow border border-gray-100 group"
            >
              <div class="text-2xl mb-3">ðŸš›</div>
              <h3 class="font-bold text-brand-dark group-hover:text-brand-red transition-colors text-lg">
                Toowoomba â†’ {route.data.destination}
              </h3>
              <div class="mt-3 flex gap-4 text-sm text-gray-500">
                <span>{route.data.transitDays || '3-7 days'}</span>
              </div>
            </a>
          ))
        }
      </div>
    </div>
  </section>

  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center text-brand-dark mb-4">Routes to Toowoomba</h2>
      <p class="text-center text-gray-600 mb-12 max-w-2xl mx-auto">
        Moving to Toowoomba? Regular services from all major cities
      </p>
      <div class="grid md:grid-cols-3 gap-6 max-w-5xl mx-auto">
        {
          popularRoutes.toCity.map((route) => (
            <a
              href={`/${route.data.slugFs}/`}
              class="block bg-white p-6 rounded-xl hover:shadow-lg transition-shadow border border-gray-100 group"
            >
              <div class="text-2xl mb-3">ðŸš›</div>
              <h3 class="font-bold text-brand-dark group-hover:text-brand-red transition-colors text-lg">
                {route.data.origin} â†’ Toowoomba
              </h3>
              <div class="mt-3 flex gap-4 text-sm text-gray-500">
                <span>{route.data.transitDays || '3-7 days'}</span>
              </div>
            </a>
          ))
        }
      </div>
    </div>
  </section>

  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto">
        <h2 class="text-3xl font-bold text-brand-dark mb-6">Toowoomba: Garden City Hub</h2>
        <div class="prose prose-lg">
          <p>
            Toowoomba sits atop the Great Dividing Range, just 125km west of Brisbane. As
            Queensland's largest inland city, it's well-connected to our
            <a href="/brisbane/" class="text-brand-red hover:underline">Brisbane</a> hub via the Warrego
            Highway.
          </p>
          <p>
            Our <a href="/backloading/" class="text-brand-red hover:underline">backloading</a>
            service runs regular trucks through Toowoomba, connecting the Darling Downs to the national
            network. Whether you're moving to
            <a href="/sydney/" class="text-brand-red hover:underline">Sydney</a>,
            <a href="/melbourne/" class="text-brand-red hover:underline">Melbourne</a>, or Perth,
            we've got you covered.
          </p>
          <p>
            We quote by <strong>cubic meter</strong> rather than truckload, so you pay fairly for the
            space you use. Transit insurance is included on all moves.
          </p>
        </div>
      </div>
    </div>
  </section>

  <FactBox facts={pageFacts} />

  <section class="py-20 bg-gradient-to-r from-brand-red to-brand-accent">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl font-bold text-white mb-6">Ready to Move from Toowoomba?</h2>
      <p class="text-white/80 mb-8 max-w-xl mx-auto">
        Get an instant quote for your Toowoomba interstate move.
      </p>
      <a
        href="https://removalistquotes.movingagain.com.au/quote/household"
        class="inline-block py-4 px-10 bg-white text-brand-red font-bold rounded-brand text-lg hover:bg-gray-100 transition-colors shadow-lg"
        >Get Your Free Quote</a
      >
    </div>
  </section>
</Layout>
