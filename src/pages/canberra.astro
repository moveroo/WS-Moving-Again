---
import Layout from '../layouts/Layout.astro';
import FactBox from '../components/FactBox.astro';
import { BRAND } from '../utils/brand';

const pageFacts = {
  service: 'Interstate backloading',
  location: 'Canberra, Australian Capital Territory',
  coverage: ['Canberra CBD', 'Belconnen', 'Woden', 'Tuggeranong', 'Gungahlin', 'Queanbeyan'],
  population: '460,000',
  typical_transit_to_sydney: '1 day',
  typical_transit_to_melbourne: '2-3 business days',
  typical_savings: '40-60%',
  transit_insurance_included: true,
  government_relocation_experience: true,
};

const popularRoutes = [
  { city: 'Sydney', slug: '/canberra-sydney/', transit: '1 day', frequency: 'Daily' },
  { city: 'Melbourne', slug: '/canberra-melbourne/', transit: '2-3 days', frequency: 'Weekly' },
  { city: 'Brisbane', slug: '/canberra-brisbane/', transit: '3-4 days', frequency: 'Weekly' },
  { city: 'Adelaide', slug: '/canberra-adelaide/', transit: '3-4 days', frequency: 'Fortnightly' },
];
---

<Layout
  title="Backloading Canberra | Interstate Removals ACT | Moving Again"
  description="Canberra backloading and interstate removals. Save up to 60% on moves to/from ACT. Daily services to Sydney. Transit insurance included."
  schemaType="LocalBusiness"
  schemaData={{
    name: 'Moving Again - Canberra',
    address: {
      '@type': 'PostalAddress',
      addressLocality: 'Canberra',
      addressRegion: 'ACT',
      addressCountry: 'AU',
    },
    areaServed: 'Australian Capital Territory',
    priceRange: '$$',
  }}
>
  <section class="bg-gradient-to-br from-brand-dark to-gray-900 text-white py-20">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <span
          class="inline-block px-4 py-1 mb-6 rounded-full bg-brand-yellow/20 text-brand-yellow font-bold uppercase tracking-wider text-sm"
        >
          ACT Hub
        </span>
        <h1 class="text-4xl md:text-6xl font-black mb-6">Backloading Canberra</h1>
        <p class="text-xl text-gray-300 mb-8 max-w-2xl mx-auto">
          Australia's capital city with daily services to Sydney. Government relocation specialists.
        </p>
        <a
          href="https://removalistquotes.movingagain.com.au/quote/household"
          class="inline-flex items-center justify-center gap-2 py-4 px-8 bg-brand-red text-white font-bold rounded-brand text-lg hover:bg-brand-accent transition-colors shadow-lg"
        >
          Get a Canberra Quote ‚Üí
