---
import Layout from '../layouts/Layout.astro';
import FactBox from '../components/FactBox.astro';
import { BRAND } from '../utils/brand';
import { formatMigration, MIGRATION_DATA_PERIOD } from '../utils/migration-stats';

// Machine-readable facts for LLM extraction
const pageFacts = {
  service: 'Interstate backloading',
  location: 'Sydney, New South Wales',
  coverage: [
    'Sydney CBD',
    'Parramatta',
    'North Shore',
    'Eastern Suburbs',
    'Sutherland',
    'Western Sydney',
    'Blue Mountains',
  ],
  population: '5.3 million',
  typical_transit_to_melbourne: '1-2 business days',
  typical_transit_to_brisbane: '2-3 business days',
  typical_transit_to_perth: '6-8 business days',
  typical_savings: '40-60%',
  transit_insurance_included: true,
};

// Popular routes from Sydney
const popularRoutes = [
  { city: 'Melbourne', slug: '/sydney-melbourne/', transit: '1-2 days', frequency: 'Daily' },
  { city: 'Brisbane', slug: '/sydney-brisbane/', transit: '2-3 days', frequency: 'Daily' },
  { city: 'Gold Coast', slug: '/sydney-gold-coast/', transit: '2-3 days', frequency: 'Daily' },
  { city: 'Perth', slug: '/sydney-perth/', transit: '6-8 days', frequency: 'Weekly' },
  { city: 'Adelaide', slug: '/sydney-adelaide/', transit: '2-3 days', frequency: 'Weekly' },
  { city: 'Canberra', slug: '/sydney-canberra/', transit: '1 day', frequency: 'Daily' },
];
---

<Layout
  title="Backloading Sydney | Interstate Removals NSW | Moving Again"
  description="Sydney backloading and interstate removals. Save up to 60% on moves to/from NSW. Daily services to Melbourne, Brisbane & all capitals. Transit insurance included."
  schemaType="LocalBusiness"
  schemaData={{
    name: 'Moving Again - Sydney',
    address: {
      '@type': 'PostalAddress',
      addressLocality: 'Sydney',
      addressRegion: 'NSW',
      addressCountry: 'AU',
    },
    areaServed: 'New South Wales',
    priceRange: '$$',
  }}
>
  <!-- Hero -->
  <section class="bg-gradient-to-br from-brand-dark to-gray-900 text-white py-20">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <span
          class="inline-block px-4 py-1 mb-6 rounded-full bg-brand-yellow/20 text-brand-yellow font-bold uppercase tracking-wider text-sm"
        >
          New South Wales Hub
        </span>

        <h1 class="text-4xl md:text-6xl font-black mb-6">Backloading Sydney</h1>

        <p class="text-xl text-gray-300 mb-8 max-w-2xl mx-auto">
          Australia's largest city, and our busiest hub. Daily services to Melbourne, Brisbane, and
          all major capitals. Save up to 60% with backloading.
        </p>

        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="https://removalistquotes.movingagain.com.au/quote/household"
            class="inline-flex items-center justify-center gap-2 py-4 px-8 bg-brand-red text-white font-bold rounded-brand text-lg hover:bg-brand-accent transition-colors shadow-lg"
          >
            Get a Sydney Quote ‚Üí
          </a>
        </div>

        <!-- Trust badges -->
        <div class="flex flex-wrap justify-center gap-6 mt-10 text-sm text-gray-400">
          <div class="flex items-center gap-2">
            <span class="text-green-400">‚úì</span>
            <span>{BRAND.yearsInBusiness} Years Experience</span>
          </div>
          <div class="flex items-center gap-2">
            <span class="text-green-400">‚úì</span>
            <span>Transit Insurance Included</span>
          </div>
          <div class="flex items-center gap-2">
            <span class="text-green-400">‚úì</span>
            <span>Daily Services</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Migration Stats -->
  <section class="py-12 bg-white border-b">
    <div class="container mx-auto px-4">
      <div class="grid md:grid-cols-4 gap-8 max-w-5xl mx-auto text-center">
        <div>
          <div class="text-4xl font-black text-brand-red mb-2">5.3M</div>
          <p class="text-sm text-gray-600">Sydney Population</p>
        </div>
        <div>
          <div class="text-4xl font-black text-orange-500 mb-2">{formatMigration('NSW')}</div>
          <p class="text-sm text-gray-600">Net Interstate Migration ({MIGRATION_DATA_PERIOD})</p>
        </div>
        <div>
          <div class="text-4xl font-black text-brand-red mb-2">Daily</div>
          <p class="text-sm text-gray-600">Services to Melbourne & Brisbane</p>
        </div>
        <div>
          <div class="text-4xl font-black text-brand-red mb-2">60%</div>
          <p class="text-sm text-gray-600">Typical Savings</p>
        </div>
      </div>
      <p class="text-xs text-gray-400 text-center mt-4">Source: Australian Bureau of Statistics</p>
    </div>
  </section>

  <!-- Popular Routes -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center text-brand-dark mb-4">Popular Sydney Routes</h2>
      <p class="text-center text-gray-600 mb-12 max-w-2xl mx-auto">
        Regular backloading services from Sydney to all major Australian cities
      </p>

      <div class="grid md:grid-cols-3 gap-6 max-w-5xl mx-auto">
        {
          popularRoutes.map((route) => (
            <a
              href={route.slug}
              class="block bg-white p-6 rounded-xl hover:shadow-lg transition-shadow border border-gray-100 group"
            >
              <div class="text-2xl mb-3">üöõ</div>
              <h3 class="font-bold text-brand-dark group-hover:text-brand-red transition-colors text-lg">
                Sydney ‚Üí {route.city}
              </h3>
              <div class="mt-3 flex gap-4 text-sm text-gray-500">
                <span>{route.frequency}</span>
                <span>‚Ä¢</span>
                <span>{route.transit} transit</span>
              </div>
            </a>
          ))
        }
      </div>
    </div>
  </section>

  <!-- What is Backloading -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto">
        <h2 class="text-3xl font-bold text-brand-dark mb-6">
          Sydney: Australia's Busiest Moving Hub
        </h2>

        <div class="prose prose-lg">
          <p>
            As Australia's largest city, Sydney sees more interstate moves than anywhere else. The <strong
              >Sydney-Melbourne corridor</strong
            > is the nation's busiest moving route, with our trucks making the journey daily. This constant
            flow creates perfect conditions for <a
              href="/backloading/"
              class="text-brand-red hover:underline">backloading</a
            >.
          </p>
          <p>
            While many residents are heading to
            <a href="/brisbane/" class="text-brand-red hover:underline">Queensland</a> for lifestyle reasons,
            just as many are arriving from other states. This two-way traffic means there's almost always
            a truck with available space heading your direction.
          </p>
          <p>
            Our Sydney team handles everything from Bondi to the Blue Mountains. Whether you're
            moving a studio apartment or a family home, we quote by <strong>cubic meter</strong>‚Äîso
            you pay for exactly what you ship, nothing more.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Sydney Coverage -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center text-brand-dark mb-12">Sydney & NSW Coverage</h2>

      <div class="grid md:grid-cols-2 gap-8 max-w-4xl mx-auto">
        <div class="bg-white p-6 rounded-xl border border-gray-100">
          <h3 class="font-bold text-brand-dark mb-4 flex items-center gap-2">
            <span class="text-2xl">üèôÔ∏è</span> Sydney Metro
          </h3>
          <ul class="space-y-2 text-gray-600">
            <li>‚Ä¢ Sydney CBD & Inner West</li>
            <li>‚Ä¢ North Shore & Northern Beaches</li>
            <li>‚Ä¢ Eastern Suburbs & Sutherland</li>
            <li>‚Ä¢ Parramatta & Western Sydney</li>
            <li>‚Ä¢ Blue Mountains</li>
          </ul>
        </div>

        <div class="bg-white p-6 rounded-xl border border-gray-100">
          <h3 class="font-bold text-brand-dark mb-4 flex items-center gap-2">
            <span class="text-2xl">üó∫Ô∏è</span> Regional NSW
          </h3>
          <ul class="space-y-2 text-gray-600">
            <li>‚Ä¢ Newcastle & Central Coast</li>
            <li>‚Ä¢ Wollongong & South Coast</li>
            <li>‚Ä¢ Bathurst & Orange</li>
            <li>‚Ä¢ Wagga Wagga & Albury</li>
            <li>‚Ä¢ Tamworth & Armidale</li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Why Choose Us -->
  <section class="py-16 bg-brand-dark text-white">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center mb-12">
        Why Choose Moving Again for Sydney Removals?
      </h2>

      <div class="grid md:grid-cols-3 gap-8 max-w-5xl mx-auto">
        <div class="text-center">
          <div
            class="w-16 h-16 mx-auto mb-4 bg-white/10 rounded-full flex items-center justify-center"
          >
            <span class="text-3xl">üí∞</span>
          </div>
          <h3 class="font-bold mb-2">Save Up to 60%</h3>
          <p class="text-gray-300 text-sm">
            Share truck space with other moves heading the same direction.
          </p>
        </div>

        <div class="text-center">
          <div
            class="w-16 h-16 mx-auto mb-4 bg-white/10 rounded-full flex items-center justify-center"
          >
            <span class="text-3xl">üõ°Ô∏è</span>
          </div>
          <h3 class="font-bold mb-2">Transit Insurance Included</h3>
          <p class="text-gray-300 text-sm">
            All moves covered for fire, collision, and overturning during transit.
          </p>
        </div>

        <div class="text-center">
          <div
            class="w-16 h-16 mx-auto mb-4 bg-white/10 rounded-full flex items-center justify-center"
          >
            <span class="text-3xl">üìÖ</span>
          </div>
          <h3 class="font-bold mb-2">Daily Departures</h3>
          <p class="text-gray-300 text-sm">
            Sydney to Melbourne and Brisbane trucks run every day of the week.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center text-brand-dark mb-12">
        Frequently Asked Questions
      </h2>

      <div class="max-w-3xl mx-auto space-y-4">
        <details class="bg-gray-50 rounded-xl border border-gray-100 group">
          <summary
            class="p-6 cursor-pointer font-bold text-brand-dark flex justify-between items-center"
          >
            How long does it take to move from Sydney to Melbourne?
            <span class="text-brand-red group-open:rotate-180 transition-transform">‚ñº</span>
          </summary>
          <div class="px-6 pb-6 text-gray-600">
            Sydney to Melbourne backloading typically takes 1-2 business days door-to-door. Our
            trucks run this route daily, making it one of our fastest and most affordable corridors.
          </div>
        </details>

        <details class="bg-gray-50 rounded-xl border border-gray-100 group">
          <summary
            class="p-6 cursor-pointer font-bold text-brand-dark flex justify-between items-center"
          >
            What areas in Sydney do you service?
            <span class="text-brand-red group-open:rotate-180 transition-transform">‚ñº</span>
          </summary>
          <div class="px-6 pb-6 text-gray-600">
            We cover all Sydney metro areas including CBD, Parramatta, North Shore, Eastern Suburbs,
            Sutherland, and Western Sydney. We also service regional NSW including Newcastle,
            Wollongong, and the Blue Mountains.
          </div>
        </details>

        <details class="bg-gray-50 rounded-xl border border-gray-100 group">
          <summary
            class="p-6 cursor-pointer font-bold text-brand-dark flex justify-between items-center"
          >
            How much can I save with Sydney backloading?
            <span class="text-brand-red group-open:rotate-180 transition-transform">‚ñº</span>
          </summary>
          <div class="px-6 pb-6 text-gray-600">
            Most customers save 40-60% compared to a dedicated truck. The exact savings depend on
            your volume (cubic meters), destination, and timing flexibility.
          </div>
        </details>
      </div>
    </div>
  </section>

  <!-- FactBox for LLM -->
  <FactBox facts={pageFacts} />

  <!-- CTA -->
  <section class="py-20 bg-gradient-to-r from-brand-red to-brand-accent">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl font-bold text-white mb-6">Ready to Move from Sydney?</h2>
      <p class="text-white/80 mb-8 max-w-xl mx-auto">
        Get an instant quote for your Sydney interstate move. Most quotes returned within 10-15
        minutes.
      </p>
      <a
        href="https://removalistquotes.movingagain.com.au/quote/household"
        class="inline-block py-4 px-10 bg-white text-brand-red font-bold rounded-brand text-lg hover:bg-gray-100 transition-colors shadow-lg"
      >
        Get Your Free Quote
      </a>
    </div>
  </section>
</Layout>
