---
import Layout from '../layouts/Layout.astro';
import FactBox from '../components/FactBox.astro';
import TrustSignals from '../components/TrustSignals.astro';
import { BRAND } from '../utils/brand';
import { formatMigration, MIGRATION_DATA_PERIOD } from '../utils/migration-stats';
import { getContentDate } from '../utils/fileDates';
import { fileURLToPath } from 'url';

// Get content modification date for Perth page
const currentFile = fileURLToPath(import.meta.url);
const perthDate = getContentDate(currentFile);

const pageFacts = {
  service: 'Interstate backloading',
  location: 'Perth, Western Australia',
  coverage: [
    'Perth CBD',
    'Fremantle',
    'Joondalup',
    'Rockingham',
    'Mandurah',
    'Bunbury',
    'Geraldton',
    'Kalgoorlie',
  ],
  population: '2.1 million',
  typical_transit_to_melbourne: '5-7 business days',
  typical_transit_to_sydney: '6-8 business days',
  typical_transit_to_adelaide: '3-5 business days',
  typical_savings: '40-60%',
  quarantine_restrictions: true,
  transit_insurance_included: true,
};

const popularRoutes = [
  { city: 'Melbourne', slug: '/perth-melbourne/', transit: '5-7 days', frequency: 'Weekly' },
  { city: 'Sydney', slug: '/perth-sydney/', transit: '6-8 days', frequency: 'Weekly' },
  { city: 'Brisbane', slug: '/perth-brisbane/', transit: '7-9 days', frequency: 'Weekly' },
  { city: 'Adelaide', slug: '/perth-adelaide/', transit: '3-5 days', frequency: 'Weekly' },
  { city: 'Darwin', slug: '/perth-darwin/', transit: '4-6 days', frequency: 'Fortnightly' },
  { city: 'Gold Coast', slug: '/perth-gold-coast/', transit: '7-9 days', frequency: 'Weekly' },
];

// FAQs for FAQPage schema
const faqs = [
  {
    question: 'How long does it take to move from Perth to Sydney?',
    answer:
      "Perth to Sydney backloading typically takes 6-8 business days. It's a 4,000km journey across the Nullarbor, so we ensure everything is properly secured for the trip.",
  },
  {
    question: "What can't I take to WA due to quarantine?",
    answer:
      "WA has strict quarantine to protect agriculture. Items that cannot enter include: fresh fruit and vegetables, plants and soil, honey, and some seeds. We'll advise you during the quote process.",
  },
  {
    question: 'How much can I save with Perth backloading?',
    answer:
      'Most customers save 40-60% compared to a dedicated truck. Given the long distances from Perth to the east coast, these savings can be significant.',
  },
];

// Breadcrumb navigation
const breadcrumbItems = [
  { name: 'Home', url: 'https://movingagain.com.au/' },
  { name: 'Service Areas', url: 'https://movingagain.com.au/service-areas/' },
  { name: 'Perth', url: 'https://movingagain.com.au/perth/' },
];
---

<Layout
  title="Backloading Perth | Interstate Removals WA | Moving Again"
  description="Perth backloading and interstate removals. Save up to 60% on moves to/from Western Australia. Weekly services to Melbourne, Sydney & all capitals...."
  schemaType="Organization"
  modifiedDate={perthDate}
  schemaData={{
    name: 'Moving Again - Perth',
    areaServed: 'Western Australia',
  }}
>
  <!-- BreadcrumbList Schema -->
  <script
    type="application/ld+json"
    set:html={JSON.stringify({
      '@context': 'https://schema.org',
      '@type': 'BreadcrumbList',
      itemListElement: breadcrumbItems.map((item, index) => ({
        '@type': 'ListItem',
        position: index + 1,
        name: item.name,
        item: item.url,
      })),
    })}
  />
  <!-- FAQPage Schema -->
  <script
    type="application/ld+json"
    set:html={JSON.stringify({
      '@context': 'https://schema.org',
      '@type': 'FAQPage',
      mainEntity: faqs.map((faq) => ({
        '@type': 'Question',
        name: faq.question,
        acceptedAnswer: {
          '@type': 'Answer',
          text: faq.answer,
        },
      })),
    })}
  />
  <section class="bg-gradient-to-br from-brand-dark to-gray-900 text-white py-20">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <span
          class="inline-block px-4 py-1 mb-6 rounded-full bg-brand-yellow/20 text-brand-yellow font-bold uppercase tracking-wider text-sm"
        >
          Western Australia Hub
        </span>
        <h1 class="text-4xl md:text-6xl font-black mb-6">Backloading Perth</h1>
        <p class="text-xl text-gray-300 mb-8 max-w-2xl mx-auto">
          Australia's most isolated capital, but well-connected through our network. Weekly services
          to all eastern states.
        </p>
        <a
          data-brain-track="quote"
          href="https://removalistquotes.movingagain.com.au/quote/household"
          class="inline-flex items-center justify-center gap-2 py-4 px-8 bg-brand-red text-white font-bold rounded-brand text-lg hover:bg-brand-accent transition-colors shadow-lg"
        >
          Get a Perth Quote ‚Üí
        </a>
        <div class="flex flex-wrap justify-center gap-6 mt-10 text-sm text-gray-200">
          <div class="flex items-center gap-2">
            <span class="text-green-300">‚úì</span><span
              >{BRAND.yearsInBusiness} Years Experience</span
            >
          </div>
          <div class="flex items-center gap-2">
            <span class="text-green-300">‚úì</span><span>Transit Insurance Included</span>
          </div>
          <div class="flex items-center gap-2">
            <span class="text-green-300">‚úì</span><span>Quarantine Experts</span>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- Breadcrumb -->
  <nav class="py-4 bg-[#800005]" role="navigation">
    <div class="container mx-auto px-4">
      <div class="flex items-center gap-2 text-sm text-white flex-wrap">
        <a href="/" class="hover:text-gray-200">Home</a>
        <span>‚Ä∫</span>
        <a href="/service-areas/" class="hover:text-gray-200">Service Areas</a>
        <span>‚Ä∫</span>
        <span class="text-white">Perth</span>
      </div>
    </div>
  </nav>

  <section class="py-12 bg-white border-b">
    <div class="container mx-auto px-4">
      <div class="grid md:grid-cols-4 gap-8 max-w-5xl mx-auto text-center">
        <div>
          <div class="text-4xl font-black text-brand-red mb-2">2.1M</div>
          <p class="text-sm text-gray-600">Perth Population</p>
        </div>
        <div>
          <div class="text-4xl font-black text-green-600 mb-2">{formatMigration('WA')}</div>
          <p class="text-sm text-gray-600">Net Interstate Migration ({MIGRATION_DATA_PERIOD})</p>
        </div>
        <div>
          <div class="text-4xl font-black text-brand-red mb-2">Weekly</div>
          <p class="text-sm text-gray-600">Services All Capitals</p>
        </div>
        <div>
          <div class="text-4xl font-black text-brand-red mb-2">60%</div>
          <p class="text-sm text-gray-600">Typical Savings</p>
        </div>
      </div>
      <p class="text-xs text-gray-500 text-center mt-4">Source: Australian Bureau of Statistics</p>
    </div>
  </section>

  <!-- WA Quarantine Notice -->
  <section class="py-8 bg-yellow-50 border-y border-yellow-200">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto flex items-start gap-4">
        <span class="text-2xl">‚ö†Ô∏è</span>
        <div>
          <h2 class="font-bold text-yellow-900 text-lg mb-2">
            Western Australia Quarantine Restrictions
          </h2>
          <p class="text-yellow-900 text-sm">
            Some items cannot enter WA including fresh produce, plants, soil, and honey. We'll
            advise you on what can and cannot be transported during your quote.
          </p>
        </div>
      </div>
    </div>
  </section>

  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center text-brand-dark mb-4">
        What Are the Popular Perth Routes?
      </h2>
      <p class="text-center text-gray-600 mb-12 max-w-2xl mx-auto">
        Regular backloading services from Perth to all major Australian cities
      </p>
      <div class="grid md:grid-cols-3 gap-6 max-w-5xl mx-auto">
        {
          popularRoutes.map((route) => (
            <a
              href={route.slug}
              class="block bg-white p-6 rounded-xl hover:shadow-lg transition-shadow border border-gray-100 group"
            >
              <div class="text-2xl mb-3">üöõ</div>
              <h3 class="font-bold text-brand-dark group-hover:text-brand-red transition-colors text-lg">
                Perth ‚Üí {route.city}
              </h3>
              <div class="mt-3 flex gap-4 text-sm text-gray-600">
                <>
                  <span>{route.frequency}</span>
                  <span>‚Ä¢</span>
                  <span>{route.transit} transit</span>
                </>
              </div>
            </a>
          ))
        }
      </div>
    </div>
  </section>

  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto">
        <h2 class="text-3xl font-bold text-brand-dark mb-6">
          What Routes Are Available from Crossing The Nullarbor?
        </h2>
        <div class="prose prose-lg">
          <p>
            The 4,000km journey between Perth and the east coast would cost a fortune with a
            dedicated truck. <a href="/backloading/" class="text-brand-red hover:underline"
              >Backloading</a
            >
            changes that equation entirely‚Äîour weekly Nullarbor runs consolidate multiple moves, splitting
            the enormous distance cost between customers.
          </p>
          <p>
            Western Australia is seeing <strong>strong interstate migration</strong>, with over
            10,000 net arrivals last year. We're experienced with WA's unique quarantine
            requirements and will advise you on what can and cannot cross the border.
          </p>
          <p>
            Perth to
            <a href="/adelaide/" class="text-brand-red hover:underline">Adelaide</a> takes 3-5 days. Perth
            to <a href="/sydney/" class="text-brand-red hover:underline">Sydney</a> or
            <a href="/melbourne/" class="text-brand-red hover:underline">Melbourne</a> takes 5-7 days.
            We quote by <strong>cubic meter</strong>, so smaller loads are priced fairly.
          </p>
        </div>
      </div>
    </div>
  </section>

  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center text-brand-dark mb-12">What Areas Do You Cover?</h2>
      <div class="grid md:grid-cols-2 gap-8 max-w-4xl mx-auto">
        <div class="bg-white p-6 rounded-xl border border-gray-100">
          <h3 class="font-bold text-brand-dark mb-4 flex items-center gap-2">
            <span class="text-2xl">üèôÔ∏è</span> Perth Metro
          </h3>
          <ul class="space-y-2 text-gray-600">
            <li>‚Ä¢ Perth CBD & Fremantle</li>
            <li>‚Ä¢ Joondalup & Northern Suburbs</li>
            <li>‚Ä¢ Rockingham & Southern Suburbs</li>
            <li>‚Ä¢ Armadale & Eastern Suburbs</li>
            <li>‚Ä¢ Mandurah & Peel Region</li>
          </ul>
        </div>
        <div class="bg-white p-6 rounded-xl border border-gray-100">
          <h3 class="font-bold text-brand-dark mb-4 flex items-center gap-2">
            <span class="text-2xl">üó∫Ô∏è</span> Regional WA
          </h3>
          <ul class="space-y-2 text-gray-600">
            <li>‚Ä¢ Bunbury & South West</li>
            <li>‚Ä¢ Geraldton & Mid West</li>
            <li>‚Ä¢ Kalgoorlie & Goldfields</li>
            <li>‚Ä¢ Albany & Great Southern</li>
            <li>‚Ä¢ Broome & Pilbara (on request)</li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <section class="py-16 bg-brand-dark text-white">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center mb-12">
        Why Choose Moving Again for Perth Removals?
      </h2>
      <div class="grid md:grid-cols-3 gap-8 max-w-5xl mx-auto">
        <div class="text-center">
          <div
            class="w-16 h-16 mx-auto mb-4 bg-white/10 rounded-full flex items-center justify-center"
          >
            <span class="text-3xl">üí∞</span>
          </div>
          <h3 class="font-bold mb-2">Save Up to 60%</h3>
          <p class="text-gray-300 text-sm">
            Share truck space with other moves heading the same direction.
          </p>
        </div>
        <div class="text-center">
          <div
            class="w-16 h-16 mx-auto mb-4 bg-white/10 rounded-full flex items-center justify-center"
          >
            <span class="text-3xl">üåø</span>
          </div>
          <h3 class="font-bold mb-2">What Are Quarantine Experts?</h3>
          <p class="text-gray-300 text-sm">
            We know WA's strict quarantine rules and what can/can't cross the border.
          </p>
        </div>
        <div class="text-center">
          <div
            class="w-16 h-16 mx-auto mb-4 bg-white/10 rounded-full flex items-center justify-center"
          >
            <span class="text-3xl">üõ°Ô∏è</span>
          </div>
          <h3 class="font-bold mb-2">What Is Transit Insurance?</h3>
          <p class="text-gray-300 text-sm">
            All moves covered for fire, collision, and overturning during transit.
          </p>
        </div>
      </div>
    </div>
  </section>

  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center text-brand-dark mb-12">
        Frequently Asked Questions
      </h2>
      <div class="max-w-3xl mx-auto space-y-4">
        <details class="bg-gray-50 rounded-xl border border-gray-100 group">
          <summary
            class="p-6 cursor-pointer font-bold text-brand-dark flex justify-between items-center"
          >
            How long does it take to move from Perth to Sydney?
            <span class="text-brand-red group-open:rotate-180 transition-transform">‚ñº</span>
          </summary>
          <div class="px-6 pb-6 text-gray-600">
            Perth to Sydney backloading typically takes 6-8 business days. It's a 4,000km journey
            across the Nullarbor, so we ensure everything is properly secured for the trip.
          </div>
        </details>
        <details class="bg-gray-50 rounded-xl border border-gray-100 group">
          <summary
            class="p-6 cursor-pointer font-bold text-brand-dark flex justify-between items-center"
          >
            What can't I take to WA due to quarantine?
            <span class="text-brand-red group-open:rotate-180 transition-transform">‚ñº</span>
          </summary>
          <div class="px-6 pb-6 text-gray-600">
            WA has strict quarantine to protect agriculture. Items that cannot enter include: fresh
            fruit and vegetables, plants and soil, honey, and some seeds. We'll advise you during
            the quote process.
          </div>
        </details>
        <details class="bg-gray-50 rounded-xl border border-gray-100 group">
          <summary
            class="p-6 cursor-pointer font-bold text-brand-dark flex justify-between items-center"
          >
            How much can I save with Perth backloading?
            <span class="text-brand-red group-open:rotate-180 transition-transform">‚ñº</span>
          </summary>
          <div class="px-6 pb-6 text-gray-600">
            Most customers save 40-60% compared to a dedicated truck. Given the long distances from
            Perth to the east coast, these savings can be significant.
          </div>
        </details>
      </div>
    </div>
  </section>

  <FactBox facts={pageFacts} />

  <!-- Security Trust Signals -->
  <TrustSignals />

  <section class="py-20 bg-gradient-to-r from-brand-red to-brand-accent">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl font-bold text-white mb-6">Ready to Move from Perth?</h2>
      <p class="text-white/90 mb-8 max-w-xl mx-auto">
        Get an instant quote for your Perth interstate move. Most quotes returned within 10-15
        minutes.
      </p>
      <a
        data-brain-track="quote"
        href="https://removalistquotes.movingagain.com.au/quote/household"
        class="inline-block py-4 px-10 bg-white text-brand-red font-bold rounded-brand text-lg hover:bg-gray-100 transition-colors shadow-lg"
        >Get Your Free Quote</a
      >
    </div>
  </section>
</Layout>
