---
import Layout from '../layouts/Layout.astro';
import { BRAND } from '../utils/brand';

import { getContentDate } from '../utils/fileDates';
import { fileURLToPath } from 'url';

// Get content modification date
const currentFile = fileURLToPath(import.meta.url);
const pageDate = getContentDate(currentFile);
---

<Layout
  title="Contact Us | Moving Again Interstate Removals"
  description="Get in touch with Moving Again for interstate moving quotes, questions, or support. We're here to help with your backloading and removalist needs."
  modifiedDate={pageDate}
>
  <!-- Hero -->
  <section class="bg-gradient-to-br from-brand-dark to-gray-900 text-white py-16">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto text-center">
        <span
          class="inline-block px-4 py-1 mb-6 rounded-full bg-brand-yellow/20 text-brand-yellow font-bold uppercase tracking-wider text-sm"
        >
          Get in Touch
        </span>

        <h1 class="text-4xl md:text-5xl font-black mb-6">Contact Moving Again</h1>

        <p class="text-xl text-gray-300">
          Questions about your move? Need help with a quote? We're here to help.
        </p>
      </div>
    </div>
  </section>

  <!-- Contact Options -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <div class="grid md:grid-cols-3 gap-8 max-w-4xl mx-auto">
        <!-- Quote -->
        <a
          data-brain-track="quote"
          href="https://removalistquotes.movingagain.com.au/quote/household"
          class="block bg-gray-50 p-8 rounded-2xl text-center hover:shadow-lg transition-shadow group"
        >
          <div
            class="w-16 h-16 mx-auto mb-4 bg-brand-red/10 rounded-full flex items-center justify-center"
          >
            <span class="text-3xl">üìù</span>
          </div>
          <h2
            class="font-bold text-brand-dark text-xl mb-2 group-hover:text-brand-red transition-colors"
          >
            Get a Quote
          </h2>
          <p class="text-gray-600 text-sm">
            Start with our online quote system for instant pricing
          </p>
        </a>

        <!-- Phone -->
        <div class="bg-gray-50 p-8 rounded-2xl text-center">
          <div
            class="w-16 h-16 mx-auto mb-4 bg-brand-red/10 rounded-full flex items-center justify-center"
          >
            <span class="text-3xl">üìû</span>
          </div>
          <h2 class="font-bold text-brand-dark text-xl mb-2">What Are Call Us?</h2>
          <p class="text-gray-600 text-sm mb-4">
            Monday ‚Äì Friday<br />
            8:00am ‚Äì 4:00pm AEST
          </p>
          <p class="text-2xl font-bold text-brand-red">
            <a href="tel:+61721432557" class="hover:underline">07 2143 2557</a>
          </p>
        </div>

        <!-- Email -->
        <div class="bg-gray-50 p-8 rounded-2xl text-center">
          <div
            class="w-16 h-16 mx-auto mb-4 bg-brand-red/10 rounded-full flex items-center justify-center"
          >
            <span class="text-3xl">‚úâÔ∏è</span>
          </div>
          <h2 class="font-bold text-brand-dark text-xl mb-2">What Are Email Us?</h2>
          <p class="text-gray-600 text-sm mb-4">
            We respond within 24 hours,<br />
            often much sooner
          </p>
          <p class="text-lg font-bold text-brand-red">
            <a href="mailto:info@movingagain.com.au" class="hover:underline"
              >info@movingagain.com.au</a
            >
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Form -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="max-w-2xl mx-auto">
        <h2 class="text-3xl font-bold text-brand-dark mb-4 text-center">Send Us a Message</h2>
        <p class="text-center text-gray-600 mb-8">
          Have a question that's not answered in our <a
            href="/questions/"
            class="text-brand-red hover:underline">FAQ</a
          >? Drop us a line.
        </p>

        <form class="bg-white p-8 rounded-2xl shadow-sm">
          <div class="grid md:grid-cols-2 gap-6 mb-6">
            <div>
              <label for="name" class="block text-sm font-medium text-brand-dark mb-2"
                >Your Name</label
              >
              <input
                type="text"
                id="name"
                name="name"
                required
                class="w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-brand-red focus:border-transparent outline-none transition-all"
                placeholder="John Smith"
              />
            </div>

            <div>
              <label for="email" class="block text-sm font-medium text-brand-dark mb-2"
                >Email Address</label
              >
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-brand-red focus:border-transparent outline-none transition-all"
                placeholder="john@example.com"
              />
            </div>
          </div>

          <div class="mb-6">
            <label for="phone" class="block text-sm font-medium text-brand-dark mb-2"
              >Phone Number <span class="text-gray-400">(optional)</span></label
            >
            <input
              type="tel"
              id="phone"
              name="phone"
              class="w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-brand-red focus:border-transparent outline-none transition-all"
              placeholder="0400 000 000"
            />
          </div>

          <div class="mb-6">
            <label for="subject" class="block text-sm font-medium text-brand-dark mb-2"
              >Subject</label
            >
            <select
              id="subject"
              name="subject"
              required
              class="w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-brand-red focus:border-transparent outline-none transition-all bg-white"
            >
              <option value="">Select a topic...</option>
              <option value="quote">Question about my quote</option>
              <option value="booking">Existing booking enquiry</option>
              <option value="feedback">Feedback</option>
              <option value="complaint">Complaint</option>
              <option value="other">Other</option>
            </select>
          </div>

          <div class="mb-6">
            <label for="message" class="block text-sm font-medium text-brand-dark mb-2"
              >Your Message</label
            >
            <textarea
              id="message"
              name="message"
              rows="5"
              required
              class="w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-brand-red focus:border-transparent outline-none transition-all resize-none"
              placeholder="How can we help you?"></textarea>
          </div>

          <button
            type="submit"
            class="w-full py-4 px-8 bg-brand-red text-white font-bold rounded-xl text-lg hover:bg-brand-accent transition-colors"
          >
            Send Message
          </button>

          <p class="text-xs text-gray-400 text-center mt-4">
            By submitting this form, you agree to our <a href="/privacy/" class="underline"
              >Privacy Policy</a
            >.
          </p>
        </form>
      </div>
    </div>
  </section>

  <!-- Why Choose Us -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto">
        <h2 class="text-3xl font-bold text-brand-dark mb-6 text-center">
          Why Choose Moving Again?
        </h2>
        <div class="prose prose-lg mx-auto">
          <p>
            Since {BRAND.foundingYear}, Moving Again has helped thousands of Australians relocate
            interstate with our innovative backloading service. We've built our reputation on
            transparent pricing, reliable service, and genuine care for our customers' belongings.
          </p>
          <p>
            Our team understands that moving is more than just transporting furniture ‚Äî it's about
            starting a new chapter. That's why we go above and beyond to make your interstate move
            as stress-free as possible, with transit insurance included and real-time updates on
            your shipment.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- What to Expect -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto">
        <h2 class="text-3xl font-bold text-brand-dark mb-8 text-center">What to Expect</h2>
        <div class="grid md:grid-cols-3 gap-6">
          <div class="bg-white p-6 rounded-xl text-center">
            <div class="text-3xl mb-3">‚ö°</div>
            <h3 class="font-bold text-brand-dark mb-2">What Is Quick Response?</h3>
            <p class="text-gray-600 text-sm">
              We respond to quotes within 24 hours, often within just a few hours during business
              hours.
            </p>
          </div>
          <div class="bg-white p-6 rounded-xl text-center">
            <div class="text-3xl mb-3">üí¨</div>
            <h3 class="font-bold text-brand-dark mb-2">What Is Clear Communication?</h3>
            <p class="text-gray-600 text-sm">
              No hidden fees or surprises. We explain everything upfront and keep you updated
              throughout.
            </p>
          </div>
          <div class="bg-white p-6 rounded-xl text-center">
            <div class="text-3xl mb-3">üõ°Ô∏è</div>
            <h3 class="font-bold text-brand-dark mb-2">What Is Transit Insurance?</h3>
            <p class="text-gray-600 text-sm">
              Every shipment includes transit insurance for your peace of mind during the move.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Service Areas CTA -->
  <section class="py-12 bg-brand-dark text-white">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-2xl font-bold mb-4">Moving Between Cities?</h2>
      <p class="text-gray-300 mb-6 max-w-xl mx-auto">
        We service all major Australian cities and many regional areas. Check out our dedicated city
        pages for routes, transit times, and local information.
      </p>
      <a
        href="/service-areas/"
        class="inline-block py-3 px-8 bg-brand-red text-white font-bold rounded-xl hover:bg-brand-accent transition-colors"
      >
        Browse Service Areas ‚Üí
      </a>
    </div>
  </section>

  <!-- Office Location -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-2xl mx-auto text-center">
        <h2 class="text-3xl font-bold text-brand-dark mb-8">What Is Our Office?</h2>

        <div class="bg-gray-50 p-8 rounded-2xl">
          <div class="text-4xl mb-4">üìç</div>
          <p class="text-gray-600">
            <!-- TODO: Update address if needed -->
            3 / 31 Expansion Street<br />
            Molendinar<br />
            Gold Coast, Queensland 4216
          </p>
          <p class="text-sm text-gray-400 mt-4">
            Note: This is our administrative office. Pickups and deliveries are arranged separately.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Quick Links -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-brand-dark mb-8 text-center">What Are Quick Links?</h2>

      <div class="grid md:grid-cols-4 gap-6 max-w-4xl mx-auto">
        <a
          data-brain-track="quote"
          href="https://removalistquotes.movingagain.com.au/quote/household"
          class="block bg-white p-6 rounded-xl text-center hover:shadow-md transition-shadow group"
        >
          <div class="text-2xl mb-2">üìù</div>
          <span class="font-medium text-brand-dark group-hover:text-brand-red transition-colors"
            >Get a Quote</span
          >
        </a>

        <a
          href="/questions/"
          class="block bg-white p-6 rounded-xl text-center hover:shadow-md transition-shadow group"
        >
          <div class="text-2xl mb-2">‚ùì</div>
          <span class="font-medium text-brand-dark group-hover:text-brand-red transition-colors"
            >FAQs</span
          >
        </a>

        <a
          href="/reviews/"
          class="block bg-white p-6 rounded-xl text-center hover:shadow-md transition-shadow group"
        >
          <div class="text-2xl mb-2">‚≠ê</div>
          <span class="font-medium text-brand-dark group-hover:text-brand-red transition-colors"
            >Reviews</span
          >
        </a>

        <a
          href="/backloading/"
          class="block bg-white p-6 rounded-xl text-center hover:shadow-md transition-shadow group"
        >
          <div class="text-2xl mb-2">üöõ</div>
          <span class="font-medium text-brand-dark group-hover:text-brand-red transition-colors"
            >About Backloading</span
          >
        </a>
      </div>
    </div>
  </section>
</Layout>
