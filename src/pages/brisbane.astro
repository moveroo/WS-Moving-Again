---
import Layout from '../layouts/Layout.astro';
import FactBox from '../components/FactBox.astro';
import TrustSignals from '../components/TrustSignals.astro';
import { BRAND } from '../utils/brand';
import { formatMigration, MIGRATION_DATA_PERIOD } from '../utils/migration-stats';

import { getContentDate } from '../utils/fileDates';
import { fileURLToPath } from 'url';

// Get content modification date
const currentFile = fileURLToPath(import.meta.url);
const pageDate = getContentDate(currentFile);

// Machine-readable facts for LLM extraction
const pageFacts = {
  service: 'Interstate backloading',
  location: 'Brisbane, Queensland',
  coverage: [
    'Brisbane CBD',
    'Gold Coast',
    'Sunshine Coast',
    'Toowoomba',
    'Logan',
    'Ipswich',
    'Redlands',
  ],
  population: '2.6 million',
  typical_transit_to_sydney: '2-3 business days',
  typical_transit_to_melbourne: '3-4 business days',
  typical_transit_to_cairns: '2-3 business days',
  typical_savings: '40-60%',
  transit_insurance_included: true,
  net_migration_trend: 'positive',
};

// Popular routes from Brisbane
const popularRoutes = [
  { city: 'Sydney', slug: '/brisbane-sydney/', transit: '2-3 days', frequency: 'Daily' },
  { city: 'Melbourne', slug: '/brisbane-melbourne/', transit: '3-4 days', frequency: 'Daily' },
  { city: 'Gold Coast', slug: '/brisbane-gold-coast/', transit: '1 day', frequency: 'Daily' },
  { city: 'Perth', slug: '/brisbane-perth/', transit: '7-9 days', frequency: 'Weekly' },
  { city: 'Cairns', slug: '/brisbane-cairns/', transit: '2-3 days', frequency: 'Daily' },
  { city: 'Townsville', slug: '/brisbane-townsville/', transit: '2 days', frequency: 'Daily' },
];

// Breadcrumb navigation
const breadcrumbItems = [
  { name: 'Home', url: 'https://movingagain.com.au/' },
  { name: 'Service Areas', url: 'https://movingagain.com.au/service-areas/' },
  { name: 'Brisbane', url: 'https://movingagain.com.au/brisbane/' },
];

// FAQs for FAQPage schema
const faqs = [
  {
    question: 'How long does it take to move from Brisbane to Sydney?',
    answer:
      'Brisbane to Sydney backloading typically takes 2-3 business days door-to-door. Our trucks run this route daily, making it one of our most affordable corridors.',
  },
  {
    question: 'Do you service the Gold Coast?',
    answer:
      'Yes! The Gold Coast is a major hub for us with daily services. We cover all areas from Tweed Heads to Surfers Paradise and beyond.',
  },
  {
    question: 'How much can I save with Brisbane backloading?',
    answer:
      'Most customers save 40-60% compared to a dedicated truck. The exact savings depend on your volume (cubic meters), destination, and timing flexibility.',
  },
];
---

<Layout
  title="Backloading Brisbane | Interstate Removals QLD | Moving Again"
  description="Brisbane backloading and interstate removals. Save up to 60% on moves to/from Queensland. Daily services to Sydney, Melbourne & Gold Coast. Transit..."
  schemaType="Organization"
  schemaData={{
    name: 'Moving Again - Brisbane',
    address: {
      '@type': 'PostalAddress',
      addressLocality: 'Brisbane',
      addressRegion: 'QLD',
      addressCountry: 'AU',
    },
    areaServed: 'Queensland',
    priceRange: '$',
  }}
  modifiedDate={pageDate}
>
  <!-- FAQPage Schema -->
  <script
    type="application/ld+json"
    set:html={JSON.stringify({
      '@context': 'https://schema.org',
      '@type': 'FAQPage',
      mainEntity: faqs.map((faq) => ({
        '@type': 'Question',
        name: faq.question,
        acceptedAnswer: {
          '@type': 'Answer',
          text: faq.answer,
        },
      })),
    })}
  />
  <!-- BreadcrumbList Schema -->
  <script
    type="application/ld+json"
    set:html={JSON.stringify({
      '@context': 'https://schema.org',
      '@type': 'BreadcrumbList',
      itemListElement: breadcrumbItems.map((item, index) => ({
        '@type': 'ListItem',
        position: index + 1,
        name: item.name,
        item: item.url,
      })),
    })}
  />
  <!-- Hero -->
  <section class="bg-gradient-to-br from-brand-dark to-gray-900 text-white py-20">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <span
          class="inline-block px-4 py-1 mb-6 rounded-full bg-brand-yellow/20 text-brand-yellow font-bold uppercase tracking-wider text-sm"
        >
          Queensland Hub
        </span>

        <h1 class="text-4xl md:text-6xl font-black mb-6">Backloading Brisbane</h1>

        <p class="text-xl text-gray-300 mb-8 max-w-2xl mx-auto">
          Queensland's capital and gateway to the Sunshine State. Daily services to Sydney,
          Melbourne, and the Gold Coast. Save up to 60% with backloading.
        </p>

        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            data-brain-track="quote"
            href="https://removalistquotes.movingagain.com.au/quote/household"
            class="inline-flex items-center justify-center gap-2 py-4 px-8 bg-brand-red text-white font-bold rounded-brand text-lg hover:bg-brand-accent transition-colors shadow-lg"
          >
            Get a Brisbane Quote ‚Üí
          </a>
        </div>

        <!-- Trust badges -->
        <div class="flex flex-wrap justify-center gap-6 mt-10 text-sm text-gray-200">
          <div class="flex items-center gap-2">
            <span class="text-green-300">‚úì</span>
            <span>{BRAND.yearsInBusiness} Years Experience</span>
          </div>
          <div class="flex items-center gap-2">
            <span class="text-green-300">‚úì</span>
            <span>Transit Insurance Included</span>
          </div>
          <div class="flex items-center gap-2">
            <span class="text-green-300">‚úì</span>
            <span>Daily Services</span>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- Breadcrumb -->
  <nav class="py-4 bg-[#800005]" role="navigation">
    <div class="container mx-auto px-4">
      <div class="flex items-center gap-2 text-sm text-white flex-wrap">
        <a href="/" class="hover:text-gray-200">Home</a>
        <span>‚Ä∫</span>
        <a href="/service-areas/" class="hover:text-gray-200">Service Areas</a>
        <span>‚Ä∫</span>
        <span class="text-white">Brisbane</span>
      </div>
    </div>
  </nav>

  <!-- Migration Stats -->
  <section class="py-12 bg-white border-b">
    <div class="container mx-auto px-4">
      <div class="grid md:grid-cols-4 gap-8 max-w-5xl mx-auto text-center">
        <div>
          <div class="text-4xl font-black text-brand-red mb-2">2.6M</div>
          <p class="text-sm text-gray-600">Brisbane Population</p>
        </div>
        <div>
          <div class="text-4xl font-black text-green-600 mb-2">{formatMigration('QLD')}</div>
          <p class="text-sm text-gray-600">Net Interstate Migration ({MIGRATION_DATA_PERIOD})</p>
        </div>
        <div>
          <div class="text-4xl font-black text-brand-red mb-2">Daily</div>
          <p class="text-sm text-gray-600">Services to Sydney & Melbourne</p>
        </div>
        <div>
          <div class="text-4xl font-black text-brand-red mb-2">60%</div>
          <p class="text-sm text-gray-600">Typical Savings</p>
        </div>
      </div>
      <p class="text-xs text-gray-500 text-center mt-4">Source: Australian Bureau of Statistics</p>
    </div>
  </section>

  <!-- Popular Routes -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center text-brand-dark mb-4">
        What Are the Popular Brisbane Routes?
      </h2>
      <p class="text-center text-gray-600 mb-12 max-w-2xl mx-auto">
        Regular backloading services from Brisbane to all major Australian cities
      </p>

      <div class="grid md:grid-cols-3 gap-6 max-w-5xl mx-auto">
        {
          popularRoutes.map((route) => (
            <a
              href={route.slug}
              class="block bg-white p-6 rounded-xl hover:shadow-lg transition-shadow border border-gray-100 group"
            >
              <div class="text-2xl mb-3">üöõ</div>
              <h3 class="font-bold text-brand-dark group-hover:text-brand-red transition-colors text-lg">
                Brisbane ‚Üí {route.city}
              </h3>
              <div class="mt-3 flex gap-4 text-sm text-gray-600">
                <span>{route.frequency}</span>
                <span>‚Ä¢</span>
                <span>{route.transit} transit</span>
              </div>
            </a>
          ))
        }
      </div>
    </div>
  </section>

  <!-- What is Backloading -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto">
        <h2 class="text-3xl font-bold text-brand-dark mb-6">
          Why Brisbane is Perfect for Backloading
        </h2>

        <div class="prose prose-lg">
          <p>
            Queensland leads the nation in <strong>net interstate migration</strong>‚Äîmore
            Australians are moving to the Sunshine State than leaving. This high volume of inbound
            moves means plenty of trucks heading north need to return south, creating excellent
            <a href="/backloading/" class="text-brand-red hover:underline">backloading</a> opportunities.
          </p>
          <p>
            Brisbane sits at the centre of our Queensland network. Whether you're relocating from
            <a href="/sydney/" class="text-brand-red hover:underline">Sydney</a>,
            <a href="/melbourne/" class="text-brand-red hover:underline">Melbourne</a>, or heading
            to the Gold Coast, our trucks run the Brisbane corridor daily. The result? More
            availability and competitive pricing.
          </p>
          <p>
            We charge by <strong>cubic meter</strong>, not by the truckload. That means you only pay
            for the space your furniture actually uses‚Äîmaking it ideal for anything from a few
            pieces to a full home.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Coverage -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center text-brand-dark mb-12">What Areas Do You Cover?</h2>

      <div class="grid md:grid-cols-2 gap-8 max-w-4xl mx-auto">
        <div class="bg-white p-6 rounded-xl border border-gray-100">
          <h3 class="font-bold text-brand-dark mb-4 flex items-center gap-2">
            <span class="text-2xl">üèôÔ∏è</span> Brisbane Metro
          </h3>
          <ul class="space-y-2 text-gray-600">
            <li>‚Ä¢ Brisbane CBD & Inner Suburbs</li>
            <li>‚Ä¢ Northside & Moreton Bay</li>
            <li>‚Ä¢ Southside & Logan</li>
            <li>‚Ä¢ Western Suburbs & Ipswich</li>
            <li>‚Ä¢ Redlands & Bayside</li>
          </ul>
        </div>

        <div class="bg-white p-6 rounded-xl border border-gray-100">
          <h3 class="font-bold text-brand-dark mb-4 flex items-center gap-2">
            <span class="text-2xl">üó∫Ô∏è</span> South East QLD & Beyond
          </h3>
          <ul class="space-y-2 text-gray-600">
            <li>‚Ä¢ Gold Coast & Tweed Heads</li>
            <li>‚Ä¢ Sunshine Coast & Noosa</li>
            <li>‚Ä¢ Toowoomba & Darling Downs</li>
            <li>
              ‚Ä¢ <a href="/townsville/" class="text-brand-red hover:underline"
                >Townsville & North QLD</a
              >
            </li>
            <li>‚Ä¢ Cairns & Far North QLD</li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Why Choose Us -->
  <section class="py-16 bg-brand-dark text-white">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center mb-12">
        Why Choose Moving Again for Brisbane Removals?
      </h2>

      <div class="grid md:grid-cols-3 gap-8 max-w-5xl mx-auto">
        <div class="text-center">
          <div
            class="w-16 h-16 mx-auto mb-4 bg-white/10 rounded-full flex items-center justify-center"
          >
            <span class="text-3xl">üí∞</span>
          </div>
          <h3 class="font-bold mb-2">Save Up to 60%</h3>
          <p class="text-gray-300 text-sm">
            Share truck space with other moves heading the same direction.
          </p>
        </div>

        <div class="text-center">
          <div
            class="w-16 h-16 mx-auto mb-4 bg-white/10 rounded-full flex items-center justify-center"
          >
            <span class="text-3xl">üå¥</span>
          </div>
          <h3 class="font-bold mb-2">QLD Lifestyle Experts</h3>
          <p class="text-gray-300 text-sm">
            We've helped thousands make the move to sunny Queensland.
          </p>
        </div>

        <div class="text-center">
          <div
            class="w-16 h-16 mx-auto mb-4 bg-white/10 rounded-full flex items-center justify-center"
          >
            <span class="text-3xl">üìÖ</span>
          </div>
          <h3 class="font-bold mb-2">What Are Daily Departures?</h3>
          <p class="text-gray-300 text-sm">
            Brisbane to Sydney and Melbourne trucks run every day.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center text-brand-dark mb-12">
        Frequently Asked Questions
      </h2>

      <div class="max-w-3xl mx-auto space-y-4">
        <details class="bg-gray-50 rounded-xl border border-gray-100 group">
          <summary
            class="p-6 cursor-pointer font-bold text-brand-dark flex justify-between items-center"
          >
            How long does it take to move from Brisbane to Sydney?
            <span class="text-brand-red group-open:rotate-180 transition-transform">‚ñº</span>
          </summary>
          <div class="px-6 pb-6 text-gray-600">
            Brisbane to Sydney backloading typically takes 2-3 business days door-to-door. Our
            trucks run this route daily, making it one of our most affordable corridors.
          </div>
        </details>

        <details class="bg-gray-50 rounded-xl border border-gray-100 group">
          <summary
            class="p-6 cursor-pointer font-bold text-brand-dark flex justify-between items-center"
          >
            Do you service the Gold Coast?
            <span class="text-brand-red group-open:rotate-180 transition-transform">‚ñº</span>
          </summary>
          <div class="px-6 pb-6 text-gray-600">
            Yes! The Gold Coast is a major hub for us with daily services. We cover all areas from
            Tweed Heads to Surfers Paradise and beyond.
          </div>
        </details>

        <details class="bg-gray-50 rounded-xl border border-gray-100 group">
          <summary
            class="p-6 cursor-pointer font-bold text-brand-dark flex justify-between items-center"
          >
            How much can I save with Brisbane backloading?
            <span class="text-brand-red group-open:rotate-180 transition-transform">‚ñº</span>
          </summary>
          <div class="px-6 pb-6 text-gray-600">
            Most customers save 40-60% compared to a dedicated truck. The exact savings depend on
            your volume (cubic meters), destination, and timing flexibility.
          </div>
        </details>
      </div>
    </div>
  </section>

  <!-- FactBox for LLM -->
  <FactBox facts={pageFacts} />

  <!-- Security Trust Signals -->
  <TrustSignals />

  <!-- CTA -->
  <section class="py-20 bg-gradient-to-r from-brand-red to-brand-accent">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl font-bold text-white mb-6">Ready to Move from Brisbane?</h2>
      <p class="text-white/90 mb-8 max-w-xl mx-auto">
        Get an instant quote for your Brisbane interstate move. Most quotes returned within 10-15
        minutes.
      </p>
      <a
        data-brain-track="quote"
        href="https://removalistquotes.movingagain.com.au/quote/household"
        class="inline-block py-4 px-10 bg-white text-brand-red font-bold rounded-brand text-lg hover:bg-gray-100 transition-colors shadow-lg"
      >
        Get Your Free Quote
      </a>
    </div>
  </section>
</Layout>
