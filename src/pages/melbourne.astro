---
import Layout from '../layouts/Layout.astro';
import FactBox from '../components/FactBox.astro';
import { BRAND } from '../utils/brand';
import { formatMigration, MIGRATION_DATA_PERIOD } from '../utils/migration-stats';

// Machine-readable facts for LLM extraction
const pageFacts = {
  service: 'Interstate backloading',
  location: 'Melbourne, Victoria',
  coverage: [
    'Melbourne CBD',
    'Geelong',
    'Ballarat',
    'Bendigo',
    'Mornington Peninsula',
    'Dandenong',
    'Frankston',
  ],
  population: '5.1 million',
  typical_transit_to_sydney: '1-2 business days',
  typical_transit_to_brisbane: '3-4 business days',
  typical_transit_to_adelaide: '2-3 business days',
  typical_savings: '40-60%',
  transit_insurance_included: true,
};

// Popular routes from Melbourne
const popularRoutes = [
  { city: 'Sydney', slug: '/melbourne-sydney/', transit: '1-2 days', frequency: 'Daily' },
  { city: 'Brisbane', slug: '/melbourne-brisbane/', transit: '3-4 days', frequency: 'Daily' },
  { city: 'Adelaide', slug: '/melbourne-adelaide/', transit: '2-3 days', frequency: 'Weekly' },
  { city: 'Perth', slug: '/melbourne-perth/', transit: '5-7 days', frequency: 'Weekly' },
  { city: 'Gold Coast', slug: '/melbourne-gold-coast/', transit: '3-4 days', frequency: 'Daily' },
  { city: 'Canberra', slug: '/melbourne-canberra/', transit: '2-3 days', frequency: 'Weekly' },
];
---

<Layout
  title="Backloading Melbourne | Interstate Removals VIC | Moving Again"
  description="Melbourne backloading and interstate removals. Save up to 60% on moves to/from Victoria. Daily services to Sydney, Brisbane & all capitals. Transit insurance included."
  schemaType="LocalBusiness"
  schemaData={{
    name: 'Moving Again - Melbourne',
    address: {
      '@type': 'PostalAddress',
      addressLocality: 'Melbourne',
      addressRegion: 'VIC',
      addressCountry: 'AU',
    },
    areaServed: 'Victoria',
    priceRange: '$$',
  }}
>
  <!-- Hero -->
  <section class="bg-gradient-to-br from-brand-dark to-gray-900 text-white py-20">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <span
          class="inline-block px-4 py-1 mb-6 rounded-full bg-brand-yellow/20 text-brand-yellow font-bold uppercase tracking-wider text-sm"
        >
          Victoria Hub
        </span>

        <h1 class="text-4xl md:text-6xl font-black mb-6">Backloading Melbourne</h1>

        <p class="text-xl text-gray-300 mb-8 max-w-2xl mx-auto">
          Australia's second-largest city and a major hub for our network. Daily services to Sydney
          and Brisbane. Save up to 60% with backloading.
        </p>

        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="https://removalistquotes.movingagain.com.au/quote/household"
            class="inline-flex items-center justify-center gap-2 py-4 px-8 bg-brand-red text-white font-bold rounded-brand text-lg hover:bg-brand-accent transition-colors shadow-lg"
          >
            Get a Melbourne Quote ‚Üí
          </a>
        </div>

        <!-- Trust badges -->
        <div class="flex flex-wrap justify-center gap-6 mt-10 text-sm text-gray-400">
          <div class="flex items-center gap-2">
            <span class="text-green-400">‚úì</span>
            <span>{BRAND.yearsInBusiness} Years Experience</span>
          </div>
          <div class="flex items-center gap-2">
            <span class="text-green-400">‚úì</span>
            <span>Transit Insurance Included</span>
          </div>
          <div class="flex items-center gap-2">
            <span class="text-green-400">‚úì</span>
            <span>Daily Services</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Migration Stats -->
  <section class="py-12 bg-white border-b">
    <div class="container mx-auto px-4">
      <div class="grid md:grid-cols-4 gap-8 max-w-5xl mx-auto text-center">
        <div>
          <div class="text-4xl font-black text-brand-red mb-2">5.1M</div>
          <p class="text-sm text-gray-600">Melbourne Population</p>
        </div>
        <div>
          <div class="text-4xl font-black text-brand-red mb-2">#1</div>
          <p class="text-sm text-gray-600">Busiest Corridor (Mel‚ÜîSyd)</p>
        </div>
        <div>
          <div class="text-4xl font-black text-brand-red mb-2">Daily</div>
          <p class="text-sm text-gray-600">Services to Sydney & Brisbane</p>
        </div>
        <div>
          <div class="text-4xl font-black text-brand-red mb-2">60%</div>
          <p class="text-sm text-gray-600">Typical Savings</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Popular Routes -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center text-brand-dark mb-4">Popular Melbourne Routes</h2>
      <p class="text-center text-gray-600 mb-12 max-w-2xl mx-auto">
        Regular backloading services from Melbourne to all major Australian cities
      </p>

      <div class="grid md:grid-cols-3 gap-6 max-w-5xl mx-auto">
        {
          popularRoutes.map((route) => (
            <a
              href={route.slug}
              class="block bg-white p-6 rounded-xl hover:shadow-lg transition-shadow border border-gray-100 group"
            >
              <div class="text-2xl mb-3">üöõ</div>
              <h3 class="font-bold text-brand-dark group-hover:text-brand-red transition-colors text-lg">
                Melbourne ‚Üí {route.city}
              </h3>
              <div class="mt-3 flex gap-4 text-sm text-gray-500">
                <span>{route.frequency}</span>
                <span>‚Ä¢</span>
                <span>{route.transit} transit</span>
              </div>
            </a>
          ))
        }
      </div>
    </div>
  </section>

  <!-- What is Backloading -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto">
        <h2 class="text-3xl font-bold text-brand-dark mb-6">
          What is the Cheapest Way to Move to or from Melbourne?
        </h2>

        <div class="prose prose-lg">
          <p>
            <a href="/backloading/" class="text-brand-red hover:underline">Backloading</a> is the answer.
            Melbourne is one of our busiest hubs, with trucks departing daily to Sydney and Brisbane.
            By sharing truck space with other moves heading the same direction, you save 40-60% compared
            to a dedicated removal.
          </p>
          <p>
            <strong>Here's how it works:</strong> If you can allow us to pick up within a 48-hour window
            instead of on a specific day, we'll drop your price as thanks for making our job easier to
            schedule.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Coverage -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center text-brand-dark mb-12">Melbourne & VIC Coverage</h2>

      <div class="grid md:grid-cols-2 gap-8 max-w-4xl mx-auto">
        <div class="bg-white p-6 rounded-xl border border-gray-100">
          <h3 class="font-bold text-brand-dark mb-4 flex items-center gap-2">
            <span class="text-2xl">üèôÔ∏è</span> Melbourne Metro
          </h3>
          <ul class="space-y-2 text-gray-600">
            <li>‚Ä¢ Melbourne CBD & Inner Suburbs</li>
            <li>‚Ä¢ Eastern Suburbs & Dandenong</li>
            <li>‚Ä¢ Mornington Peninsula</li>
            <li>‚Ä¢ Western Suburbs & Werribee</li>
            <li>‚Ä¢ Northern Suburbs & Craigieburn</li>
          </ul>
        </div>

        <div class="bg-white p-6 rounded-xl border border-gray-100">
          <h3 class="font-bold text-brand-dark mb-4 flex items-center gap-2">
            <span class="text-2xl">üó∫Ô∏è</span> Regional Victoria
          </h3>
          <ul class="space-y-2 text-gray-600">
            <li>‚Ä¢ Geelong & Surf Coast</li>
            <li>‚Ä¢ Ballarat & Bendigo</li>
            <li>‚Ä¢ Shepparton & Wodonga</li>
            <li>‚Ä¢ Warrnambool & Horsham</li>
            <li>‚Ä¢ Gippsland & Lakes Entrance</li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Why Choose Us -->
  <section class="py-16 bg-brand-dark text-white">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center mb-12">
        Why Choose Moving Again for Melbourne Removals?
      </h2>

      <div class="grid md:grid-cols-3 gap-8 max-w-5xl mx-auto">
        <div class="text-center">
          <div
            class="w-16 h-16 mx-auto mb-4 bg-white/10 rounded-full flex items-center justify-center"
          >
            <span class="text-3xl">üí∞</span>
          </div>
          <h3 class="font-bold mb-2">Save Up to 60%</h3>
          <p class="text-gray-300 text-sm">
            Share truck space with other moves heading the same direction.
          </p>
        </div>

        <div class="text-center">
          <div
            class="w-16 h-16 mx-auto mb-4 bg-white/10 rounded-full flex items-center justify-center"
          >
            <span class="text-3xl">üõ°Ô∏è</span>
          </div>
          <h3 class="font-bold mb-2">Transit Insurance Included</h3>
          <p class="text-gray-300 text-sm">
            All moves covered for fire, collision, and overturning during transit.
          </p>
        </div>

        <div class="text-center">
          <div
            class="w-16 h-16 mx-auto mb-4 bg-white/10 rounded-full flex items-center justify-center"
          >
            <span class="text-3xl">üìÖ</span>
          </div>
          <h3 class="font-bold mb-2">Daily Departures</h3>
          <p class="text-gray-300 text-sm">Melbourne to Sydney trucks run every day of the week.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center text-brand-dark mb-12">
        Frequently Asked Questions
      </h2>

      <div class="max-w-3xl mx-auto space-y-4">
        <details class="bg-gray-50 rounded-xl border border-gray-100 group">
          <summary
            class="p-6 cursor-pointer font-bold text-brand-dark flex justify-between items-center"
          >
            How long does it take to move from Melbourne to Sydney?
            <span class="text-brand-red group-open:rotate-180 transition-transform">‚ñº</span>
          </summary>
          <div class="px-6 pb-6 text-gray-600">
            Melbourne to Sydney backloading typically takes 1-2 business days door-to-door. Our
            trucks run this route daily, making it one of our fastest and most affordable corridors.
          </div>
        </details>

        <details class="bg-gray-50 rounded-xl border border-gray-100 group">
          <summary
            class="p-6 cursor-pointer font-bold text-brand-dark flex justify-between items-center"
          >
            What areas in Melbourne do you service?
            <span class="text-brand-red group-open:rotate-180 transition-transform">‚ñº</span>
          </summary>
          <div class="px-6 pb-6 text-gray-600">
            We cover all Melbourne metro areas including CBD, Eastern Suburbs, Mornington Peninsula,
            and Western Suburbs. We also service regional Victoria including Geelong, Ballarat, and
            Bendigo.
          </div>
        </details>

        <details class="bg-gray-50 rounded-xl border border-gray-100 group">
          <summary
            class="p-6 cursor-pointer font-bold text-brand-dark flex justify-between items-center"
          >
            How much can I save with Melbourne backloading?
            <span class="text-brand-red group-open:rotate-180 transition-transform">‚ñº</span>
          </summary>
          <div class="px-6 pb-6 text-gray-600">
            Most customers save 40-60% compared to a dedicated truck. The exact savings depend on
            your volume (cubic meters), destination, and timing flexibility.
          </div>
        </details>
      </div>
    </div>
  </section>

  <!-- FactBox for LLM -->
  <FactBox facts={pageFacts} />

  <!-- CTA -->
  <section class="py-20 bg-gradient-to-r from-brand-red to-brand-accent">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl font-bold text-white mb-6">Ready to Move from Melbourne?</h2>
      <p class="text-white/80 mb-8 max-w-xl mx-auto">
        Get an instant quote for your Melbourne interstate move. Most quotes returned within 10-15
        minutes.
      </p>
      <a
        href="https://removalistquotes.movingagain.com.au/quote/household"
        class="inline-block py-4 px-10 bg-white text-brand-red font-bold rounded-brand text-lg hover:bg-gray-100 transition-colors shadow-lg"
